---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Impressum – PropGate" noindex={true}>
  <Header />

  <main class="legal-main">
    <div class="legal-container">
      <h1 class="legal-h1">Impressum</h1>

      <div class="legal-content">
        <section>
          <h2>Angaben gemäß § 5 TMG</h2>
          <p>
            [Firmenname]<br />
            [Straße und Hausnummer]<br />
            [PLZ und Ort]
          </p>
        </section>

        <section>
          <h2>Kontakt</h2>
          <p>
            Telefon: [Telefonnummer]<br />
            E-Mail: [E-Mail-Adresse]
          </p>
        </section>

        <section>
          <h2>Vertretungsberechtigter</h2>
          <p>[Name des Geschäftsführers]</p>
        </section>

        <section>
          <h2>Registereintrag</h2>
          <p>
            Eintragung im Handelsregister<br />
            Registergericht: [Registergericht]<br />
            Registernummer: [Registernummer]
          </p>
        </section>

        <section>
          <h2>Umsatzsteuer-ID</h2>
          <p>
            Umsatzsteuer-Identifikationsnummer gemäß § 27a Umsatzsteuergesetz:<br />
            [USt-IdNr.]
          </p>
        </section>

        <section class="legal-notice">
          <p>
            <em>Hinweis: Dies ist ein Platzhalter-Impressum. Bitte ersetzen Sie die Daten vor dem
            produktiven Einsatz durch Ihre tatsächlichen Angaben.</em>
          </p>
        </section>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .legal-main {
    background: #ffffff;
    min-height: 60vh;
    padding: 5rem 1.5rem;
  }

  .legal-container {
    max-width: 720px;
    margin: 0 auto;
  }

  .legal-h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #0f0f1a;
    letter-spacing: -0.04em;
    margin-bottom: 2.5rem;
  }

  .legal-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .legal-content section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .legal-content h2 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0f0f1a;
  }

  .legal-content p {
    font-size: 1rem;
    line-height: 1.7;
    color: #4b5563;
  }

  .legal-notice {
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding-top: 1.5rem;
  }

  .legal-notice p {
    font-size: 0.9rem;
    color: #9ca3af;
  }
</style>
