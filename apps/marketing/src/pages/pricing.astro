---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CTABanner from '../components/CTABanner.astro';
import Footer from '../components/Footer.astro';
import { APP_URL } from '../config/urls';

const plans = [
  {
    id: 'starter',
    name: 'Starter',
    limit: 'bis 5 Objekte',
    priceMonthly: '9,99',
    priceAnnual: '8,99',
    yearlyTotal: '107,88',
    description: 'Für Einsteiger und kleine Portfolios.',
    featured: false,
    href: `${APP_URL}/register?plan=starter`,
    cta: 'Jetzt testen',
    features: [
      { text: 'Bis zu 5 Objekte & Einheiten', included: true },
      { text: 'Mieterverwaltung & Verträge', included: true },
      { text: 'Sollstellungen & Kautionsverwaltung', included: true },
      { text: 'Zahlungs-Tracking & Offene Posten', included: true },
      { text: 'Mahnwesen', included: true },
      { text: 'Zählerverwaltung', included: true },
      { text: 'Dashboard & KPIs', included: true },
      { text: 'E-Mail-Support', included: true },
      { text: 'Ticketsystem', included: false },
      { text: 'CSV-Bankimport & Auto-Matching', included: false },
      { text: 'Dokumentenverwaltung', included: false },
      { text: 'Datenexport (CSV / Excel)', included: false },
      { text: 'Multi-User / Team-Zugang', included: false },
      { text: 'API-Zugriff', included: false },
    ],
  },
  {
    id: 'plus',
    name: 'Plus',
    limit: 'bis 20 Objekte',
    priceMonthly: '29,99',
    priceAnnual: '26,99',
    yearlyTotal: '323,88',
    description: 'Für wachsende Portfolios mit vollem Feature-Umfang.',
    featured: false,
    href: `${APP_URL}/register?plan=plus`,
    cta: 'Jetzt testen',
    features: [
      { text: 'Bis zu 20 Objekte & Einheiten', included: true },
      { text: 'Alle Starter-Features', included: true },
      { text: 'Ticketsystem mit Status-Workflow', included: true },
      { text: 'CSV-Bankimport & Auto-Matching', included: true },
      { text: 'Dokumentenverwaltung', included: true },
      { text: 'Datenexport (CSV / Excel)', included: true },
      { text: 'Priority-Support', included: true },
      { text: 'Multi-User / Team-Zugang', included: false },
      { text: 'API-Zugriff', included: false },
    ],
  },
  {
    id: 'pro',
    name: 'Pro',
    limit: 'bis 60 Objekte',
    priceMonthly: '79,99',
    priceAnnual: '71,99',
    yearlyTotal: '863,88',
    description: 'Für professionelle Verwalter mit größerem Portfolio.',
    featured: true,
    badge: 'Empfohlen',
    href: `${APP_URL}/register?plan=pro`,
    cta: 'Jetzt testen',
    features: [
      { text: 'Bis zu 60 Objekte & Einheiten', included: true },
      { text: 'Alle Plus-Features', included: true },
      { text: 'Ticketsystem mit Status-Workflow', included: true },
      { text: 'CSV-Bankimport & Auto-Matching', included: true },
      { text: 'Dokumentenverwaltung', included: true },
      { text: 'Datenexport (CSV / Excel)', included: true },
      { text: 'Priority-Support mit schnellerer Reaktion', included: true },
      { text: 'Multi-User / Team-Zugang', included: false },
      { text: 'API-Zugriff', included: false },
    ],
  },
  {
    id: 'unlimited',
    name: 'Unlimited',
    limit: 'Unbegrenzte Objekte',
    priceMonthly: '149,00',
    priceAnnual: '134,10',
    yearlyTotal: '1.609,20',
    description: 'Für große Verwaltungsunternehmen mit Team.',
    featured: false,
    href: `${APP_URL}/register?plan=unlimited`,
    cta: 'Jetzt testen',
    features: [
      { text: 'Unbegrenzt Objekte & Einheiten', included: true },
      { text: 'Alle Pro-Features', included: true },
      { text: 'Multi-User (unbegrenzt Nutzer)', included: true },
      { text: 'Rollenbasierte Zugriffsrechte', included: true },
      { text: 'Admin / Sachbearbeiter / ReadOnly', included: true },
      { text: 'API-Zugriff', included: true },
      { text: 'Dedizierter Account-Manager', included: true },
      { text: 'SLA-Garantie', included: true },
    ],
  },
];

const checkIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>`;
const crossIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>`;
---

<Layout
  title="Preise – PropGate | 30 Tage kostenlos testen"
  description="PropGate Preisübersicht: 30 Tage Free Trial ohne Kreditkarte. Starter €9,99 · Plus €29,99 · Pro €79,99 · Unlimited €149,00 pro Monat. 10% Rabatt bei Jahresvertrag."
>
  <Header showBack={true} />

  <main>
    <!-- Hero -->
    <section class="pricing-hero">
      <div class="orb orb-1" aria-hidden="true"></div>
      <div class="orb orb-2" aria-hidden="true"></div>
      <div class="pricing-hero-inner">
        <div class="hero-badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
          </svg>
          30 Tage Free Trial · Keine Kreditkarte
        </div>
        <h1 class="pricing-h1">
          Einfache, transparente<br />
          <span class="gradient-text">Preise</span>
        </h1>
        <p class="pricing-subtext">
          Starten Sie kostenlos und upgraden Sie nur dann, wenn Sie bereit sind.
          Bei jährlicher Zahlung sparen Sie <strong>2 Monate</strong>.
        </p>
      </div>
    </section>

    <!-- Plans Section -->
    <section class="plans-section">
      <div class="plans-container">

        <!-- Billing Toggle -->
        <div class="billing-toggle-wrap">
          <div class="billing-toggle" role="group" aria-label="Abrechnungszeitraum">
            <button class="toggle-btn is-active" data-period="monthly" id="toggle-monthly">
              Monatlich
            </button>
            <button class="toggle-btn" data-period="annual" id="toggle-annual">
              Jährlich
              <span class="save-chip">2 Monate gratis</span>
            </button>
          </div>
        </div>

        <!-- Plans Grid -->
        <div class="plans-grid">
          {plans.map((plan) => (
            <div class={`plan-card ${plan.featured ? 'plan-featured' : ''}`}>
              {plan.featured && plan.badge && (
                <div class="plan-badge">{plan.badge}</div>
              )}

              <div class="plan-header">
                <div class="plan-name-row">
                  <h2 class="plan-name">{plan.name}</h2>
                  <span class="plan-limit-chip">{plan.limit}</span>
                </div>
                <p class="plan-description">{plan.description}</p>

                <div class="plan-price-wrap">
                  <div class="plan-price">
                    <span class="price-currency">€</span>
                    <span
                      class="price-amount"
                      data-monthly={plan.priceMonthly}
                      data-annual={plan.priceAnnual}
                    >
                      {plan.priceMonthly}
                    </span>
                    <span class="price-period">/Monat</span>
                  </div>
                  <p class="price-note price-note-monthly">zzgl. MwSt. · monatlich kündbar</p>
                  <p class="price-note price-note-annual" style="display:none">
                    <span class="annual-total" data-total={plan.yearlyTotal}>= €{plan.yearlyTotal}/Jahr</span>
                    · zzgl. MwSt.
                  </p>
                </div>
              </div>

              <a
                href={plan.href}
                class={`plan-cta ${plan.featured ? 'plan-cta-primary' : 'plan-cta-secondary'}`}
              >
                {plan.cta}
              </a>

              <ul class="plan-features">
                {plan.features.map((feature) => (
                  <li class={`feature-item ${feature.included ? 'feature-included' : 'feature-missing'}`}>
                    <span
                      class={feature.included ? 'feature-check' : 'feature-cross'}
                      set:html={feature.included ? checkIcon : crossIcon}
                    />
                    <span>{feature.text}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        <p class="pricing-note">
          Alle Preise zzgl. MwSt. · 30 Tage Free Trial auf allen Plänen · Keine Kreditkarte erforderlich · Monatlich kündbar
        </p>

        <!-- Free Trial Info Box -->
        <div class="trial-info">
          <div class="trial-info-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
            </svg>
          </div>
          <div class="trial-info-content">
            <h3>Was passiert nach dem Free Trial?</h3>
            <p>
              Nach den 30 Tagen können Sie jederzeit auf einen bezahlten Plan upgraden, um weiter aktiv zu verwalten.
              Ihr Konto bleibt im <strong>Read-only-Modus</strong> erhalten — alle Daten sind sichtbar und können exportiert werden.
              Kein Datenverlust, kein Stress.
            </p>
          </div>
        </div>

        <!-- FAQ -->
        <div class="faq-section">
          <h2 class="faq-title">Häufige Fragen</h2>
          <div class="faq-grid">
            <div class="faq-item">
              <h3 class="faq-q">Muss ich eine Kreditkarte angeben?</h3>
              <p class="faq-a">Nein. Sie können PropGate 30 Tage lang vollständig kostenlos testen — ohne Kreditkarte und ohne Verpflichtung.</p>
            </div>
            <div class="faq-item">
              <h3 class="faq-q">Welchen Plan soll ich wählen?</h3>
              <p class="faq-a">Starten Sie einfach mit dem Free Trial auf dem Plan, der zur Größe Ihres Portfolios passt. Sie können jederzeit wechseln.</p>
            </div>
            <div class="faq-item">
              <h3 class="faq-q">Kann ich jederzeit upgraden oder kündigen?</h3>
              <p class="faq-a">Ja. Sie können jeden Monat wechseln oder kündigen — keine Mindestlaufzeit, keine Kündigungsfristen.</p>
            </div>
            <div class="faq-item">
              <h3 class="faq-q">Wie funktioniert die Jahresabrechnung?</h3>
              <p class="faq-a">Bei jährlicher Zahlung zahlen Sie nur für 10 Monate — 2 Monate sind gratis. Der Betrag wird einmalig jährlich abgebucht.</p>
            </div>
            <div class="faq-item">
              <h3 class="faq-q">Was passiert mit meinen Daten bei einer Kündigung?</h3>
              <p class="faq-a">Ihr Konto wechselt in den Read-only-Modus. Alle Daten bleiben sichtbar und können als CSV exportiert werden.</p>
            </div>
            <div class="faq-item">
              <h3 class="faq-q">Gibt es einen Rabatt für größere Portfolios?</h3>
              <p class="faq-a">Ab 60+ Objekten empfehlen wir Unlimited. Für sehr große Portfolios oder besondere Anforderungen kontaktieren Sie uns gerne.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <CTABanner />
  <Footer />
</Layout>

<style>
  /* Hero */
  .pricing-hero {
    background: var(--bg);
    padding: 6rem 1.5rem 5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    pointer-events: none;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.2) 0%, transparent 70%);
    top: -200px;
    left: -100px;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.15) 0%, transparent 70%);
    bottom: -100px;
    right: -50px;
  }

  .pricing-hero-inner {
    position: relative;
    z-index: 1;
    max-width: 640px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 102, 255, 0.1);
    border: 1px solid rgba(0, 102, 255, 0.25);
    color: #4da6ff;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.4rem 0.875rem;
    border-radius: 100px;
    margin-bottom: 1.5rem;
  }

  .pricing-h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.04em;
    color: var(--heading);
    margin-bottom: 1.25rem;
  }

  .gradient-text {
    background: linear-gradient(135deg, #0066ff 0%, #4da6ff 50%, #66b8ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .pricing-subtext {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-muted);
  }

  .pricing-subtext strong {
    color: var(--text);
  }

  /* Plans Section */
  .plans-section {
    background: var(--bg-alt);
    padding: 5rem 1.5rem;
  }

  .plans-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Billing Toggle */
  .billing-toggle-wrap {
    display: flex;
    justify-content: center;
    margin-bottom: 2.5rem;
  }

  .billing-toggle {
    display: inline-flex;
    background: #e5e7eb;
    border-radius: 12px;
    padding: 4px;
    gap: 2px;
  }

  .toggle-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5625rem 1.25rem;
    border-radius: 9px;
    border: none;
    background: transparent;
    color: #6b7280;
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
    font-family: inherit;
  }

  .toggle-btn.is-active {
    background: #ffffff;
    color: #0f0f1a;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
    font-weight: 600;
  }

  .save-chip {
    display: inline-block;
    background: #dcfce7;
    color: #15803d;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.15rem 0.5rem;
    border-radius: 100px;
    white-space: nowrap;
  }

  /* Plans Grid */
  .plans-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.25rem;
    align-items: start;
    margin-bottom: 1.5rem;
  }

  .plan-card {
    background: var(--bg-card);
    border: 1.5px solid var(--border-card);
    border-radius: 16px;
    padding: 1.75rem;
    position: relative;
    transition: box-shadow 0.2s ease;
  }

  .plan-card:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }

  .plan-featured {
    border-color: #0066ff;
    border-width: 2px;
    box-shadow:
      0 0 0 4px rgba(0, 102, 255, 0.05),
      0 12px 40px rgba(0, 102, 255, 0.14);
  }

  .plan-badge {
    position: absolute;
    top: -13px;
    left: 50%;
    transform: translateX(-50%);
    background: #0066ff;
    color: #ffffff;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding: 0.3rem 0.875rem;
    border-radius: 100px;
    white-space: nowrap;
  }

  .plan-header {
    margin-bottom: 1.25rem;
  }

  .plan-name-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    margin-bottom: 0.375rem;
    flex-wrap: wrap;
  }

  .plan-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--heading);
    letter-spacing: -0.02em;
  }

  .plan-featured .plan-name {
    color: #0066ff;
  }

  .plan-limit-chip {
    font-size: 0.75rem;
    font-weight: 500;
    color: #6b7280;
    background: #f3f4f6;
    padding: 0.2rem 0.5rem;
    border-radius: 100px;
    white-space: nowrap;
  }

  .plan-featured .plan-limit-chip {
    background: rgba(0, 102, 255, 0.08);
    color: #0066ff;
  }

  .plan-description {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .plan-price-wrap {
    margin-bottom: 0;
  }

  .plan-price {
    display: flex;
    align-items: baseline;
    gap: 0.1rem;
  }

  .price-currency {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--heading);
    margin-top: 0.3rem;
  }

  .price-amount {
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--heading);
    line-height: 1;
    letter-spacing: -0.04em;
  }

  .price-period {
    font-size: 0.875rem;
    color: #9ca3af;
    margin-left: 0.125rem;
  }

  .price-note {
    font-size: 0.75rem;
    color: #9ca3af;
    margin-top: 0.25rem;
    line-height: 1.4;
  }

  .annual-total {
    font-weight: 600;
    color: #15803d;
  }

  .plan-cta {
    display: block;
    text-align: center;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    padding: 0.75rem 1rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
    transition: all 0.15s ease;
    margin-top: 1.25rem;
  }

  .plan-cta-primary {
    background: #0066ff;
    color: #ffffff;
    box-shadow: 0 4px 14px rgba(0, 102, 255, 0.3);
  }

  .plan-cta-primary:hover {
    background: #0052cc;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(0, 102, 255, 0.4);
  }

  .plan-cta-secondary {
    background: transparent;
    color: var(--text-muted);
    border: 1.5px solid var(--border-card);
  }

  .plan-cta-secondary:hover {
    background: var(--bg-card);
    border-color: var(--border);
  }

  .plan-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    padding-top: 1.25rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.875rem;
    line-height: 1.45;
  }

  .feature-included { color: var(--text-muted); }
  .feature-missing { color: #d1d5db; }

  .feature-check { color: #0066ff; flex-shrink: 0; margin-top: 1px; }
  .feature-cross { color: #e5e7eb; flex-shrink: 0; margin-top: 1px; }

  .pricing-note {
    text-align: center;
    font-size: 0.8125rem;
    color: #9ca3af;
    margin-bottom: 3rem;
  }

  /* Free Trial Info Box */
  .trial-info {
    display: flex;
    gap: 1.25rem;
    background: rgba(0, 102, 255, 0.04);
    border: 1px solid rgba(0, 102, 255, 0.12);
    border-radius: 14px;
    padding: 1.5rem 2rem;
    margin-bottom: 4rem;
    align-items: flex-start;
  }

  .trial-info-icon {
    width: 44px;
    height: 44px;
    background: rgba(0, 102, 255, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0066ff;
    flex-shrink: 0;
  }

  .trial-info-content h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--heading);
    margin-bottom: 0.375rem;
  }

  .trial-info-content p {
    font-size: 0.9375rem;
    line-height: 1.65;
    color: var(--text-muted);
  }

  .trial-info-content strong {
    color: var(--text);
    font-weight: 600;
  }

  /* FAQ */
  .faq-section {
    border-top: 1px solid rgba(0, 0, 0, 0.07);
    padding-top: 4rem;
  }

  .faq-title {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 700;
    color: #0f0f1a;
    letter-spacing: -0.03em;
    margin-bottom: 2.5rem;
    text-align: center;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.25rem;
  }

  .faq-item {
    background: var(--bg-card);
    border: 1px solid var(--border-card);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .faq-q {
    font-size: 1rem;
    font-weight: 600;
    color: var(--heading);
    margin-bottom: 0.5rem;
  }

  .faq-a {
    font-size: 0.9375rem;
    line-height: 1.65;
    color: var(--text-muted);
  }

  @media (max-width: 1280px) {
    .plans-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .plans-grid {
      grid-template-columns: 1fr;
    }
    .faq-grid {
      grid-template-columns: 1fr;
    }
    .trial-info {
      flex-direction: column;
    }
  }
</style>

<script>
  const monthlyBtn = document.getElementById('toggle-monthly');
  const annualBtn = document.getElementById('toggle-annual');

  function setPeriod(period: string) {
    const isAnnual = period === 'annual';

    monthlyBtn?.classList.toggle('is-active', !isAnnual);
    annualBtn?.classList.toggle('is-active', isAnnual);

    document.querySelectorAll<HTMLElement>('.price-amount').forEach((el) => {
      el.textContent = isAnnual
        ? (el.dataset.annual ?? el.dataset.monthly ?? '')
        : (el.dataset.monthly ?? '');
    });

    document.querySelectorAll<HTMLElement>('.price-note-monthly').forEach((el) => {
      el.style.display = isAnnual ? 'none' : '';
    });
    document.querySelectorAll<HTMLElement>('.price-note-annual').forEach((el) => {
      el.style.display = isAnnual ? '' : 'none';
    });
  }

  monthlyBtn?.addEventListener('click', () => setPeriod('monthly'));
  annualBtn?.addEventListener('click', () => setPeriod('annual'));
</script>
