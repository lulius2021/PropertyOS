---
import { APP_URL } from '../config/urls';

interface Props {
  showBack?: boolean;
}
const { showBack = false } = Astro.props;

const navItems = [
  {
    label: 'Preise',
    href: '/pricing',
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>`,
  },
  {
    label: 'Neuheiten',
    href: '/neuheiten',
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>`,
  },
  {
    label: 'Blog',
    href: '/blog',
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M2 3h6a4 4 0 014 4v14a3 3 0 00-3-3H2z"/><path d="M22 3h-6a4 4 0 00-4 4v14a3 3 0 013-3h7z"/></svg>`,
  },
  {
    label: 'Sicherheit',
    href: '/security',
    icon: `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  },
];
---

<header id="site-header">
  <div class="header-pill" id="header-pill">
    <!-- Back arrow (sub-pages only) -->
    {showBack && (
      <a href="/" class="back-btn" aria-label="Zurück zur Startseite">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </a>
    )}

    <!-- Logo -->
    <a href="/" class="logo" aria-label="PropGate Startseite">
      <img src="/logo-solid.png" alt="PropGate" class="logo-img" />
      <span class="logo-text">Prop<span class="logo-accent">Gate</span></span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="desktop-nav" aria-label="Hauptnavigation">
      {navItems.map((item) => (
        <a href={item.href} class="nav-link">
          <span class="nav-icon" set:html={item.icon} />
          <span class="nav-label">{item.label}</span>
        </a>
      ))}
    </nav>

    <!-- CTA Buttons (desktop only) -->
    <div class="header-cta">
      <!-- Interactive hover login button -->
      <a href={`${APP_URL}/login`} class="login-hover-btn" aria-label="Login">
        <span class="login-hover-text">Login</span>
        <div class="login-hover-reveal">
          <span>Login</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
        <div class="login-hover-blob"></div>
      </a>
    </div>

    <!-- Theme Toggle (always visible) -->
    <button class="theme-toggle" id="theme-toggle" aria-label="Farbschema wechseln">
      <svg class="icon-sun" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
      </svg>
      <svg class="icon-moon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
      </svg>
    </button>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Menü öffnen" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Navigation: fixed overlay that slides down -->
  <div class="mobile-nav" id="mobile-nav" aria-hidden="true">
    {navItems.map((item) => (
      <a href={item.href} class="mobile-nav-link">
        <span class="mobile-nav-icon" set:html={item.icon} />
        {item.label}
      </a>
    ))}
    <div class="mobile-nav-divider"></div>
    <a href={`${APP_URL}/login`} class="mobile-nav-link">Login</a>
    <a href={`${APP_URL}/register`} class="mobile-btn-primary">Kostenlos starten</a>
  </div>
</header>

<style>
  #site-header {
    position: sticky;
    top: 1rem;
    z-index: 50;
    padding: 0 1.25rem;
    pointer-events: none;
    height: 0;
    overflow: visible;
  }

  .header-pill {
    max-width: 1040px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--pill-bg);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid var(--pill-border);
    border-radius: 999px;
    padding: 0 1.5rem;
    height: 68px;
    pointer-events: all;
    box-shadow: var(--pill-shadow);
    transition: border-radius 0.25s ease, background 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .header-pill.menu-open {
    border-radius: 999px;
  }

  /* ── Back button ── */
  .back-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.07);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #8a94a8;
    text-decoration: none;
    flex-shrink: 0;
    transition: background 0.15s ease, color 0.15s ease, transform 0.15s ease;
  }

  .back-btn:hover {
    background: rgba(255, 255, 255, 0.13);
    color: #ffffff;
    transform: translateX(-2px);
  }

  /* ── Logo ── */
  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-img {
    width: 52px;
    height: 52px;
    object-fit: contain;
    filter: drop-shadow(0 0 8px rgba(0, 102, 255, 0.4));
    transition: filter 0.2s ease, transform 0.2s ease;
  }

  .logo:hover .logo-img {
    filter: drop-shadow(0 0 14px rgba(0, 102, 255, 0.65));
    transform: scale(1.05);
  }

  .logo-text {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--text);
    letter-spacing: -0.025em;
    white-space: nowrap;
  }

  .logo-accent {
    color: #0066ff;
  }

  /* ── Desktop Nav ── */
  .desktop-nav {
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: center;
    gap: 0.5rem;
  }

  /* On mobile, push theme-toggle + hamburger to the right */
  @media (max-width: 768px) {
    .logo { margin-right: auto; }
  }

  /* Each nav item: icon always visible, label slides in on hover */
  .nav-link {
    display: flex;
    align-items: center;
    padding: 0.4rem 0.65rem;
    border-radius: 999px;
    text-decoration: none;
    color: var(--text-muted);
    transition: background 0.2s ease, color 0.2s ease;
    overflow: hidden;
    position: relative;
  }

  .nav-link:hover {
    background: var(--nav-hover);
    color: var(--text);
  }

  /* Icon */
  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1), color 0.4s ease;
  }

  .nav-link:hover .nav-icon {
    transform: scale(1.2) rotate(-8deg);
    color: #ffffff;
  }

  /* Label: hidden by default, slides + fades in on hover */
  .nav-label {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    white-space: nowrap;
    max-width: 0;
    opacity: 0;
    overflow: hidden;
    transform: translateX(-6px);
    transition:
      max-width 0.7s cubic-bezier(0.34, 1.56, 0.64, 1),
      opacity 0.4s ease 0.1s,
      transform 0.7s cubic-bezier(0.34, 1.56, 0.64, 1),
      margin-left 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);
    margin-left: 0;
  }

  .nav-link:hover .nav-label {
    max-width: 100px;
    opacity: 1;
    transform: translateX(0);
    margin-left: 0.4rem;
  }

  /* ── CTA ── */
  .header-cta {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    flex-shrink: 0;
  }

  /* ── Interactive Login Button ── */
  .login-hover-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 999px;
    border: 1px solid var(--pill-border);
    padding: 0.45rem 1.25rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-muted);
    text-decoration: none;
    cursor: pointer;
    white-space: nowrap;
    min-width: 90px;
  }

  .login-hover-text {
    display: inline-block;
    transform: translateX(2px);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .login-hover-btn:hover .login-hover-text {
    transform: translateX(48px);
    opacity: 0;
  }

  .login-hover-reveal {
    position: absolute;
    inset: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    color: #ffffff;
    opacity: 0;
    transform: translateX(48px);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .login-hover-btn:hover .login-hover-reveal {
    opacity: 1;
    transform: translateX(0);
  }

  .login-hover-blob {
    position: absolute;
    left: 8%;
    top: 40%;
    width: 8px;
    height: 8px;
    border-radius: 999px;
    background: #0066ff;
    transform: scale(1);
    transition: left 0.3s ease, top 0.3s ease, width 0.3s ease, height 0.3s ease, transform 0.3s ease;
  }

  .login-hover-btn:hover .login-hover-blob {
    left: 0%;
    top: 0%;
    width: 100%;
    height: 100%;
    transform: scale(1.8);
  }

  /* ── Theme Toggle ── */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--toggle-bg);
    border: 1px solid var(--pill-border);
    color: var(--text-muted);
    cursor: pointer;
    flex-shrink: 0;
    transition: background 0.15s ease, color 0.15s ease;
  }

  .theme-toggle:hover {
    background: var(--toggle-hover);
    color: var(--text);
  }

  .icon-moon { display: none; }
  html[data-theme="light"] .icon-sun { display: none; }
  html[data-theme="light"] .icon-moon { display: block; }

  /* ── Mobile ── */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 4.5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.4rem;
    border-radius: 8px;
  }

  .mobile-menu-btn span {
    display: block;
    width: 20px;
    height: 1.5px;
    background: #8a94a8;
    border-radius: 2px;
    transition: all 0.2s ease;
  }

  .mobile-nav {
    position: fixed;
    /* sits just below the pill: 1rem (top offset) + 68px (pill height) + 10px gap */
    top: calc(1rem + 68px + 10px);
    left: 1.25rem;
    right: 1.25rem;
    z-index: 45;
    background: rgba(10, 10, 18, 0.98);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid rgba(255, 255, 255, 0.09);
    border-radius: 20px;
    padding: 0.5rem 0.625rem 0.875rem;
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    pointer-events: all;
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.6);
    /* Hidden state: slide up + fade */
    transform: translateY(-12px);
    opacity: 0;
    visibility: hidden;
    transition: transform 0.28s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.22s ease,
                visibility 0s linear 0.28s;
  }

  .mobile-nav.is-open {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
    transition: transform 0.28s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.22s ease,
                visibility 0s linear 0s;
  }

  .mobile-nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #8a94a8;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 0.7rem 0.75rem;
    border-radius: 12px;
    transition: color 0.15s ease, background 0.15s ease;
  }

  .mobile-nav-link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.06);
  }

  .mobile-nav-icon {
    display: flex;
    align-items: center;
    color: #5a6478;
  }

  .mobile-nav-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.07);
    margin: 0.375rem 0.75rem;
  }

  .mobile-btn-primary {
    display: block;
    background: #0066ff;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    text-align: center;
    margin-top: 0.25rem;
  }

  /* ── Light theme overrides ── */
  html[data-theme="light"] .mobile-nav {
    background: rgba(255, 255, 255, 0.97);
    border-color: rgba(0, 0, 0, 0.08);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.12);
  }

  html[data-theme="light"] .mobile-nav-link {
    color: #4a5568;
  }

  html[data-theme="light"] .mobile-nav-link:hover {
    color: #0f1020;
    background: rgba(0, 0, 0, 0.05);
  }

  html[data-theme="light"] .mobile-nav-icon {
    color: #8a94a8;
  }

  html[data-theme="light"] .mobile-nav-divider {
    background: rgba(0, 0, 0, 0.07);
  }

  @media (max-width: 768px) {
    .desktop-nav,
    .header-cta {
      display: none;
    }

    .theme-toggle {
      display: flex;
      margin-left: auto;
    }

    .header-pill {
      padding: 0 1rem;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    #site-header {
      padding: 0 0.75rem;
    }

    .header-pill {
      height: 58px;
      padding: 0 0.875rem;
    }

    .mobile-nav {
      /* 0.75rem (top offset) + 58px (pill height) + 10px gap */
      top: calc(0.75rem + 58px + 10px);
      left: 0.75rem;
      right: 0.75rem;
    }

    .logo-img {
      width: 40px;
      height: 40px;
    }

    .logo-text {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  // Mobile menu
  const btn = document.getElementById('mobile-menu-btn');
  const nav = document.getElementById('mobile-nav');
  const pill = document.getElementById('header-pill');

  if (btn && nav && pill) {
    btn.addEventListener('click', () => {
      const isOpen = nav.classList.toggle('is-open');
      pill.classList.toggle('menu-open', isOpen);
      btn.setAttribute('aria-expanded', String(isOpen));
      nav.setAttribute('aria-hidden', String(!isOpen));
    });
  }

  // Theme toggle — clone trick: real text reveals with correct colors as circle expands
  const toggle = document.getElementById('theme-toggle');

  toggle?.addEventListener('click', () => {
    const html    = document.documentElement;
    const current = html.getAttribute('data-theme') || 'dark';
    const next    = current === 'dark' ? 'light' : 'dark';

    const rect = (toggle as HTMLElement).getBoundingClientRect();
    const x = rect.left + rect.width  / 2;
    const y = rect.top  + rect.height / 2;
    const maxR = Math.ceil(Math.hypot(
      Math.max(x, window.innerWidth  - x),
      Math.max(y, window.innerHeight - y)
    ));

    // Read old background color before switching
    const oldBg = getComputedStyle(document.body).backgroundColor;

    // Simple solid overlay — avoids scroll/clone artefacts
    const overlay = document.createElement('div');
    overlay.style.cssText =
      `position:fixed;inset:0;pointer-events:none;z-index:99999;background:${oldBg}`;

    document.body.appendChild(overlay);

    // Switch to new theme immediately — actual DOM now has new colors
    html.classList.add('theme-switching');
    html.setAttribute('data-theme', next);
    localStorage.setItem('propgate-theme', next);
    (window as any).__updateAppThemeLinks?.();

    // Animate a hole expanding from the toggle button through the solid overlay
    // → new theme revealed inside growing circle, old color visible outside
    const duration = 600;
    const startTime = performance.now();

    const easeOut = (t: number) => 1 - Math.pow(1 - t, 3);

    const frame = (now: number) => {
      const t = Math.min((now - startTime) / duration, 1);
      const r = easeOut(t) * maxR;
      const mask = `radial-gradient(circle ${r}px at ${x}px ${y}px, transparent ${r}px, black ${r}px)`;
      overlay.style.maskImage = mask;
      (overlay.style as any).webkitMaskImage = mask;
      if (t < 1) requestAnimationFrame(frame);
      else {
        overlay.remove();
        html.setAttribute('data-anim-done', '');
        html.classList.remove('theme-switching');
      }
    };
    requestAnimationFrame(frame);
  });
</script>
