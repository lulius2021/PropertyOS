---
interface Props {
  showBack?: boolean;
}
const { showBack = false } = Astro.props;

const navItems = [
  {
    label: 'Preise',
    href: '/pricing',
    icon: `<svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>`,
  },
  {
    label: 'Neuheiten',
    href: '/neuheiten',
    icon: `<svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>`,
  },
  {
    label: 'Blog',
    href: '/blog',
    icon: `<svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M2 3h6a4 4 0 014 4v14a3 3 0 00-3-3H2z"/><path d="M22 3h-6a4 4 0 00-4 4v14a3 3 0 013-3h7z"/></svg>`,
  },
  {
    label: 'Sicherheit',
    href: '/security',
    icon: `<svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  },
];
---

<header id="site-header">
  <div class="header-pill" id="header-pill">
    <!-- Back arrow (sub-pages only) -->
    {showBack && (
      <a href="/" class="back-btn" aria-label="Zurück zur Startseite">
        <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </a>
    )}

    <!-- Logo -->
    <a href="/" class="logo" aria-label="PropGate Startseite">
      <img src="/logo.png" alt="PropGate" class="logo-img" />
      <span class="logo-text">Prop<span class="logo-accent">Gate</span></span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="desktop-nav" aria-label="Hauptnavigation">
      {navItems.map((item) => (
        <a href={item.href} class="nav-link">
          <span class="nav-icon" set:html={item.icon} />
          <span class="nav-label">{item.label}</span>
        </a>
      ))}
    </nav>

    <!-- CTA Buttons -->
    <div class="header-cta">
      <a href="https://app.propgate.de/login" class="btn-ghost">Login</a>
      <a href="https://app.propgate.de/register" class="btn-primary magnetic">Starten →</a>
      <!-- Theme Toggle -->
      <button class="theme-toggle" id="theme-toggle" aria-label="Farbschema wechseln">
        <svg class="icon-sun" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="icon-moon" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Menü öffnen" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Navigation -->
  <div class="mobile-nav" id="mobile-nav" aria-hidden="true">
    {navItems.map((item) => (
      <a href={item.href} class="mobile-nav-link">
        <span class="mobile-nav-icon" set:html={item.icon} />
        {item.label}
      </a>
    ))}
    <div class="mobile-nav-divider"></div>
    <a href="https://app.propgate.de/login" class="mobile-nav-link">Login</a>
    <a href="https://app.propgate.de/register" class="mobile-btn-primary">Kostenlos starten</a>
  </div>
</header>

<style>
  #site-header {
    position: sticky;
    top: 1rem;
    z-index: 50;
    padding: 0 1.25rem;
    pointer-events: none;
    height: 0;
    overflow: visible;
  }

  .header-pill {
    max-width: 860px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--pill-bg);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border: 1px solid var(--pill-border);
    border-radius: 999px;
    padding: 0 1.125rem;
    height: 56px;
    pointer-events: all;
    box-shadow: var(--pill-shadow);
    transition: border-radius 0.25s ease, background 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .header-pill.menu-open {
    border-radius: 24px;
  }

  /* ── Back button ── */
  .back-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.07);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #8a94a8;
    text-decoration: none;
    flex-shrink: 0;
    transition: background 0.15s ease, color 0.15s ease, transform 0.15s ease;
  }

  .back-btn:hover {
    background: rgba(255, 255, 255, 0.13);
    color: #ffffff;
    transform: translateX(-2px);
  }

  /* ── Logo ── */
  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-img {
    width: 38px;
    height: 38px;
    object-fit: contain;
    filter: drop-shadow(0 0 8px rgba(0, 102, 255, 0.4));
    transition: filter 0.2s ease, transform 0.2s ease;
  }

  .logo:hover .logo-img {
    filter: drop-shadow(0 0 14px rgba(0, 102, 255, 0.65));
    transform: scale(1.05);
  }

  .logo-text {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text);
    letter-spacing: -0.025em;
    white-space: nowrap;
  }

  .logo-accent {
    color: #0066ff;
  }

  /* ── Desktop Nav ── */
  .desktop-nav {
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: center;
    gap: 0.125rem;
  }

  /* Each nav item: icon always visible, label slides in on hover */
  .nav-link {
    display: flex;
    align-items: center;
    padding: 0.4rem 0.65rem;
    border-radius: 999px;
    text-decoration: none;
    color: var(--text-muted);
    transition: background 0.2s ease, color 0.2s ease;
    overflow: hidden;
    position: relative;
  }

  .nav-link:hover {
    background: var(--nav-hover);
    color: var(--text);
  }

  /* Icon */
  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1), color 0.4s ease;
  }

  .nav-link:hover .nav-icon {
    transform: scale(1.2) rotate(-8deg);
    color: #ffffff;
  }

  /* Label: hidden by default, slides + fades in on hover */
  .nav-label {
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    white-space: nowrap;
    max-width: 0;
    opacity: 0;
    overflow: hidden;
    transform: translateX(-6px);
    transition:
      max-width 0.7s cubic-bezier(0.34, 1.56, 0.64, 1),
      opacity 0.4s ease 0.1s,
      transform 0.7s cubic-bezier(0.34, 1.56, 0.64, 1),
      margin-left 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);
    margin-left: 0;
  }

  .nav-link:hover .nav-label {
    max-width: 100px;
    opacity: 1;
    transform: translateX(0);
    margin-left: 0.4rem;
  }

  /* ── CTA ── */
  .header-cta {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    flex-shrink: 0;
  }

  .btn-ghost {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    transition: color 0.15s ease, background 0.15s ease;
    white-space: nowrap;
  }

  .btn-ghost:hover {
    color: var(--text);
    background: var(--nav-hover);
  }

  /* ── Theme Toggle ── */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--toggle-bg);
    border: 1px solid var(--pill-border);
    color: var(--text-muted);
    cursor: pointer;
    flex-shrink: 0;
    transition: background 0.15s ease, color 0.15s ease;
  }

  .theme-toggle:hover {
    background: var(--toggle-hover);
    color: var(--text);
  }

  .icon-moon { display: none; }
  html[data-theme="light"] .icon-sun { display: none; }
  html[data-theme="light"] .icon-moon { display: block; }

  .btn-primary {
    background: #0066ff;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    padding: 0.4rem 0.95rem;
    border-radius: 999px;
    transition: background 0.15s ease, box-shadow 0.15s ease, transform 0.15s ease;
    white-space: nowrap;
  }

  .btn-primary:hover {
    background: #0052cc;
    box-shadow: 0 0 20px rgba(0, 102, 255, 0.4);
    transform: translateY(-1px);
  }

  /* ── Mobile ── */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 4.5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.4rem;
    border-radius: 8px;
    margin-left: auto;
  }

  .mobile-menu-btn span {
    display: block;
    width: 20px;
    height: 1.5px;
    background: #8a94a8;
    border-radius: 2px;
    transition: all 0.2s ease;
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    padding: 0.5rem 0.5rem 1rem;
    gap: 0.125rem;
    pointer-events: all;
  }

  .mobile-nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #8a94a8;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 0.7rem 0.75rem;
    border-radius: 12px;
    transition: color 0.15s ease, background 0.15s ease;
  }

  .mobile-nav-link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.06);
  }

  .mobile-nav-icon {
    display: flex;
    align-items: center;
    color: #5a6478;
  }

  .mobile-nav-divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.07);
    margin: 0.375rem 0.75rem;
  }

  .mobile-btn-primary {
    display: block;
    background: #0066ff;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    padding: 0.875rem 1rem;
    border-radius: 12px;
    text-align: center;
    margin-top: 0.25rem;
  }

  @media (max-width: 768px) {
    .desktop-nav,
    .header-cta {
      display: none;
    }

    .header-pill {
      padding: 0 1rem;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .mobile-nav.is-open {
      display: flex;
    }
  }
</style>

<script>
  // Mobile menu
  const btn = document.getElementById('mobile-menu-btn');
  const nav = document.getElementById('mobile-nav');
  const pill = document.getElementById('header-pill');

  if (btn && nav && pill) {
    btn.addEventListener('click', () => {
      const isOpen = nav.classList.toggle('is-open');
      pill.classList.toggle('menu-open', isOpen);
      btn.setAttribute('aria-expanded', String(isOpen));
      nav.setAttribute('aria-hidden', String(!isOpen));
    });
  }

  // Theme toggle with wipe animation
  const toggle = document.getElementById('theme-toggle');
  const overlay = document.getElementById('theme-overlay') as HTMLElement | null;

  toggle?.addEventListener('click', () => {
    const current = document.documentElement.getAttribute('data-theme') || 'dark';
    const next = current === 'dark' ? 'light' : 'dark';

    if (!overlay) {
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('propgate-theme', next);
      return;
    }

    // Overlay = OLD theme color, instantly snaps to cover the screen
    overlay.style.transition = 'none';
    overlay.style.background = current === 'dark' ? '#0a0a0f' : '#f5f8ff';
    overlay.style.transform = 'translateY(0)';

    // Theme switches IMMEDIATELY under the overlay
    document.documentElement.setAttribute('data-theme', next);
    localStorage.setItem('propgate-theme', next);

    // Old color slides DOWN off screen → new theme revealed from top to bottom
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        overlay.style.transition = 'transform 0.48s cubic-bezier(0.76, 0, 0.24, 1)';
        overlay.style.transform = 'translateY(100%)';

        // Reset above viewport for next use
        setTimeout(() => {
          overlay.style.transition = 'none';
          overlay.style.transform = 'translateY(-100%)';
        }, 520);
      });
    });
  });
</script>
