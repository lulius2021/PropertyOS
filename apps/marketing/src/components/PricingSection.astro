    background: rgba(255, 255, 255, 0.12);
    color: #f0f4ff;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    padding: 0.25rem 0.625rem;
    border-radius: 100px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(4px);
    z-index: 1;
  }

  /* Card body */
  .card-body {
    padding: 1.125rem 1.5rem 1.5rem;
  }

  .plan-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #f0f4ff;
    letter-spacing: -0.03em;
    margin-bottom: 0.375rem;
    line-height: 1.2;
  }

  .plan-description {
    font-size: 0.875rem;
    color: #6b7a99;
    line-height: 1.55;
    margin-bottom: 1.25rem;
  }

  .plan-featured .plan-description {
    color: #8aa3cc;
  }

  /* Price */
  .plan-price {
    display: flex;
    align-items: baseline;
    gap: 0.1rem;
    margin-bottom: 0.25rem;
  }

  .price-currency {
    font-size: 1.125rem;
    font-weight: 600;
    color: #cbd5e1;
    line-height: 1;
    padding-top: 2px;
  }

  .price-amount {
    font-size: 2.5rem;
    font-weight: 800;
    color: #f0f4ff;
    line-height: 1;
    letter-spacing: -0.04em;
    display: inline-block;
  }

  @keyframes price-out-up {
    0%   { opacity: 1; transform: translateY(0) scale(1); }
    100% { opacity: 0; transform: translateY(-28px) scale(0.85); }
  }
  @keyframes price-in-up {
    0%   { opacity: 0; transform: translateY(28px) scale(0.85); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }
  @keyframes price-out-down {
    0%   { opacity: 1; transform: translateY(0) scale(1); }
    100% { opacity: 0; transform: translateY(28px) scale(0.85); }
  }
  @keyframes price-in-down {
    0%   { opacity: 0; transform: translateY(-28px) scale(0.85); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }

  .price-amount.anim-out-up   { animation: price-out-up   0.18s ease-in forwards; }
  .price-amount.anim-in-up    { animation: price-in-up    0.22s ease-out forwards; }
  .price-amount.anim-out-down { animation: price-out-down 0.18s ease-in forwards; }
  .price-amount.anim-in-down  { animation: price-in-down  0.22s ease-out forwards; }

  /* Save chip pop animation */
  @keyframes chip-pop {
    0%   { transform: scale(1); }
    40%  { transform: scale(1.25); }
    100% { transform: scale(1); }
  }
  .save-chip.popping { animation: chip-pop 0.35s ease-out; }

  .price-period {
    font-size: 0.9375rem;
    color: #6b7a99;
    margin-left: 0.25rem;
  }

  .price-note {
    font-size: 0.75rem;
