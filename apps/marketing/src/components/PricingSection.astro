---
const plans = [
  {
    name: 'Starter',
    price: '0',
    period: '/Monat',
    description: 'Für Einsteiger und kleine Portfolios.',
    featured: false,
    href: 'https://app.propgate.de/register?plan=starter',
    cta: 'Kostenlos starten',
    features: [
      'Bis zu 5 Objekte',
      'Basis-Mieterverwaltung',
      'Zahlungs-Tracking',
      'Dashboard & KPIs',
      'E-Mail-Support',
    ],
    missing: [
      'CSV-Bankimport',
      'Mahnwesen',
      'Ticketsystem',
      'Dokument-Export',
    ],
  },
  {
    name: 'Professional',
    price: '29',
    period: '/Monat',
    description: 'Für wachsende Immobilienportfolios.',
    featured: true,
    badge: 'Empfohlen',
    href: 'https://app.propgate.de/register?plan=professional',
    cta: 'Jetzt starten',
    features: [
      'Unbegrenzt Objekte',
      'Vollständige Mieterverwaltung',
      'CSV-Bankimport & Auto-Matching',
      'Mahnwesen mit PDF-Export',
      'Ticketsystem',
      'Zählerverwaltung',
      'Dokument-Export (CSV/Excel)',
      'Priority-Support',
    ],
    missing: [],
  },
  {
    name: 'Enterprise',
    price: '99',
    period: '/Monat',
    description: 'Für professionelle Verwaltungsunternehmen.',
    featured: false,
    href: 'https://app.propgate.de/register?plan=enterprise',
    cta: 'Kontakt aufnehmen',
    features: [
      'Alles aus Professional',
      'Multi-User (unbegrenzt)',
      'Rollenbasierte Rechte',
      'API-Zugang',
      'Priority Support mit SLA',
      'Onboarding-Service',
      'Custom Branding',
      'Dedizierter Account-Manager',
    ],
    missing: [],
  },
];

const checkIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>`;
const crossIcon = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>`;
---

<section class="pricing-section" id="preise">
  <div class="pricing-container">
    <!-- Header -->
    <div class="section-header">
      <p class="section-eyebrow">Preise</p>
      <h2 class="section-h2">Transparent und fair</h2>
      <p class="section-subtitle">
        Starten Sie kostenlos und upgraden Sie, wenn Ihr Portfolio wächst.
      </p>
    </div>

    <!-- Plans -->
    <div class="plans-grid">
      {plans.map((plan) => (
        <div class={`plan-card ${plan.featured ? 'plan-featured' : ''}`}>
          {plan.featured && plan.badge && (
            <div class="plan-badge">{plan.badge}</div>
          )}
          <div class="plan-header">
            <h3 class="plan-name">{plan.name}</h3>
            <p class="plan-description">{plan.description}</p>
            <div class="plan-price">
              <span class="price-currency">€</span>
              <span class="price-amount">{plan.price}</span>
              <span class="price-period">{plan.period}</span>
            </div>
          </div>

          <a href={plan.href} class={`plan-cta ${plan.featured ? 'plan-cta-primary' : 'plan-cta-secondary'}`}>
            {plan.cta}
          </a>

          <ul class="plan-features">
            {plan.features.map((feature) => (
              <li class="feature-item feature-included">
                <span class="feature-check" set:html={checkIcon} />
                <span>{feature}</span>
              </li>
            ))}
            {plan.missing.map((feature) => (
              <li class="feature-item feature-missing">
                <span class="feature-cross" set:html={crossIcon} />
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom note -->
    <p class="pricing-note">
      Alle Preise zzgl. MwSt. · Monatlich kündbar · Keine versteckten Kosten
    </p>
  </div>
</section>

<style>
  .pricing-section {
    background: #ffffff;
    padding: 5rem 1.5rem;
  }

  .pricing-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .section-eyebrow {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #0066ff;
    margin-bottom: 0.75rem;
  }

  .section-h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.03em;
    color: #0f0f1a;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #5a6478;
  }

  .plans-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    align-items: start;
  }

  .plan-card {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.09);
    border-radius: 16px;
    padding: 2rem;
    position: relative;
    transition: box-shadow 0.2s ease;
  }

  .plan-card:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }

  .plan-featured {
    border-color: #0066ff;
    border-width: 2px;
    box-shadow:
      0 0 0 4px rgba(0, 102, 255, 0.06),
      0 12px 40px rgba(0, 102, 255, 0.12);
  }

  .plan-featured:hover {
    box-shadow:
      0 0 0 4px rgba(0, 102, 255, 0.08),
      0 16px 48px rgba(0, 102, 255, 0.18);
  }

  .plan-badge {
    position: absolute;
    top: -13px;
    left: 50%;
    transform: translateX(-50%);
    background: #0066ff;
    color: #ffffff;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding: 0.3rem 0.875rem;
    border-radius: 100px;
    white-space: nowrap;
  }

  .plan-header {
    margin-bottom: 1.5rem;
  }

  .plan-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0f0f1a;
    margin-bottom: 0.375rem;
    letter-spacing: -0.02em;
  }

  .plan-featured .plan-name {
    color: #0066ff;
  }

  .plan-description {
    font-size: 0.9375rem;
    color: #5a6478;
    margin-bottom: 1.25rem;
    line-height: 1.5;
  }

  .plan-price {
    display: flex;
    align-items: baseline;
    gap: 0.2rem;
  }

  .price-currency {
    font-size: 1.25rem;
    font-weight: 600;
    color: #0f0f1a;
    margin-top: 0.375rem;
  }

  .price-amount {
    font-size: 3rem;
    font-weight: 800;
    color: #0f0f1a;
    line-height: 1;
    letter-spacing: -0.04em;
  }

  .price-period {
    font-size: 0.9375rem;
    color: #5a6478;
    margin-left: 0.125rem;
  }

  .plan-cta {
    display: block;
    text-align: center;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 600;
    padding: 0.75rem 1.25rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
    transition: all 0.15s ease;
  }

  .plan-cta-primary {
    background: #0066ff;
    color: #ffffff;
    box-shadow: 0 4px 16px rgba(0, 102, 255, 0.3);
  }

  .plan-cta-primary:hover {
    background: #0052cc;
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(0, 102, 255, 0.4);
  }

  .plan-cta-secondary {
    background: transparent;
    color: #0f0f1a;
    border: 1.5px solid rgba(0, 0, 0, 0.12);
  }

  .plan-cta-secondary:hover {
    background: #f8f9fc;
    border-color: rgba(0, 0, 0, 0.2);
  }

  .plan-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    font-size: 0.9375rem;
    line-height: 1.4;
  }

  .feature-included {
    color: #374151;
  }

  .feature-missing {
    color: #9ca3af;
  }

  .feature-check {
    color: #0066ff;
    flex-shrink: 0;
    margin-top: 1px;
  }

  .feature-cross {
    color: #d1d5db;
    flex-shrink: 0;
    margin-top: 1px;
  }

  .pricing-note {
    text-align: center;
    font-size: 0.875rem;
    color: #9ca3af;
    margin-top: 2rem;
  }

  @media (max-width: 1024px) {
    .plans-grid {
      grid-template-columns: 1fr;
      max-width: 440px;
      margin: 0 auto;
    }
  }

  @media (max-width: 640px) {
    .plans-grid {
      max-width: 100%;
    }
  }
</style>
