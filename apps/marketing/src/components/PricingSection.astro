    limit: 'bis 5 Objekte',
    priceMonthly: '9,99',
    priceAnnual: '8,99',
    description: 'Einsteiger-Plan für kleine Portfolios.',
    featured: false,
    href: `${APP_URL}/register?plan=starter`,
    cta: 'Plan wählen',
    gradient: 'linear-gradient(135deg, #0d1117 0%, #111827 100%)',
    iconBg: '#1a2332',
    features: [
      'Bis zu 5 Objekte & Einheiten',
      'Mieterverwaltung & Verträge',
      'Zahlungs-Tracking & Offene Posten',
      'Mahnwesen',
      'Zählerverwaltung',
      'Dashboard & KPIs',
    ],
    prevPlanLabel: null,
  },
  {
    id: 'plus',
    name: 'Plus',
    limit: 'bis 20 Objekte',
    priceMonthly: '29,99',
    priceAnnual: '26,99',
    description: 'Mehr Features für wachsende Portfolios.',
    featured: false,
    href: `${APP_URL}/register?plan=plus`,
    cta: 'Plan wählen',
    gradient: 'linear-gradient(135deg, #0d1117 0%, #111827 100%)',
    iconBg: '#1a2332',
    features: [
      'Ticketsystem',
      'CSV-Bankimport & Auto-Matching',
      'Dokumentenverwaltung',
      'Datenexport (CSV / Excel)',
    ],
    prevPlanLabel: 'STARTER +',
  },
  {
    id: 'pro',
    name: 'Pro',
    limit: 'bis 60 Objekte',
    priceMonthly: '79,99',
    priceAnnual: '71,99',
    description: 'Professionelle Verwaltung. Priority-Support. Volle Kontrolle.',
    featured: true,
    badge: 'Empfohlen',
    href: `${APP_URL}/register?plan=pro`,
    cta: 'Kostenlos testen',
    gradient: 'linear-gradient(145deg, #001a4d 0%, #003080 40%, #0044aa 70%, #001f5c 100%)',
    iconBg: '#0044aa',
    features: [
      'Bis zu 60 Objekte & Einheiten',
      'Priority-Support',
      'Erweiterte Auswertungen',
    ],
    prevPlanLabel: 'STARTER & PLUS +',
  },
  {
    id: 'unlimited',
    name: 'Unlimited',
    limit: 'Unbegrenzte Objekte',
    priceMonthly: '149,00',
    priceAnnual: '134,10',
    description: 'Für große Verwaltungsunternehmen mit Team.',
    featured: false,
    href: 'mailto:hallo@propgate.de',
    cta: 'Kontakt aufnehmen',
    gradient: 'linear-gradient(135deg, #0d1117 0%, #111827 100%)',
    iconBg: '#1a2332',
    features: [
      'Unbegrenzt Objekte & Einheiten',
      'Multi-User & Rollenrechte',
      'API-Zugriff',
      'Dedizierter Account-Manager',
    ],
    prevPlanLabel: 'STARTER, PLUS & PRO +',
  },
];

const buildingIcon = `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 22V12h6v10"/><path d="M9 7h1m4 0h1M9 11h1m4 0h1"/></svg>`;
const checkIcon = `<svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>`;
const mailIcon = `<svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`;
---

<section class="pricing-section" id="preise">
  <div class="pricing-container">

    <!-- Header -->
    <div class="section-header" data-animate="fade">
      <p class="section-eyebrow">Preise</p>
      <h2 class="section-h2">Transparent und fair</h2>
      <p class="section-subtitle">30 Tage kostenlos testen — keine Kreditkarte erforderlich.</p>
    </div>

    <!-- Billing Toggle -->
    <div class="billing-toggle-wrap" data-animate="fade">
      <div class="billing-toggle" role="group" aria-label="Abrechnungszeitraum">
        <button class="toggle-btn is-active" data-period="monthly" id="toggle-monthly">Monatlich</button>
        <button class="toggle-btn" data-period="annual" id="toggle-annual">
          Jährlich
          <span class="save-chip">2 Monate gratis</span>
        </button>
      </div>
    </div>

    <!-- Plans Grid -->
    <div class="plans-grid" id="pricing-grid">
      {plans.map((plan) => (
        <div class={`card-float-wrap ${plan.featured ? 'card-float-featured' : ''}`}>
          <div
            class={`plan-card ${plan.featured ? 'plan-featured' : ''}`}
            style={`--card-gradient: ${plan.gradient}; --icon-bg: ${plan.iconBg};`}
          >
            <!-- Card visual top area -->
            <div class="card-visual">
              <div class="card-icon" set:html={buildingIcon} />
              {plan.featured && plan.badge && (
                <span class="plan-badge">{plan.badge}</span>
              )}
              <div class="card-deco" aria-hidden="true" />
            </div>

            <!-- Card content -->
            <div class="card-body">
              <h3 class="plan-name">{plan.name}</h3>
              <p class="plan-description">{plan.description}</p>

              <div class="plan-price">
                <span class="price-currency">€</span>
                <span
                  class="price-amount"
                  data-monthly={plan.priceMonthly}
                  data-annual={plan.priceAnnual}
                >{plan.priceMonthly}</span>
                <span class="price-period">/Monat</span>
              </div>
              <p class="price-note price-note-monthly">zzgl. MwSt., monatlich kündbar</p>
              <p class="price-note price-note-annual" style="display:none">zzgl. MwSt., jährliche Zahlung</p>

              <a
                href={plan.href}
                class={`plan-cta ${plan.featured ? 'plan-cta-primary' : plan.id === 'unlimited' ? 'plan-cta-contact' : 'plan-cta-secondary'}`}
              >
                {plan.id === 'unlimited' && <span set:html={mailIcon} />}
                {plan.cta}
              </a>

              {plan.prevPlanLabel && (
                <div class="features-divider">
                  <span>{plan.prevPlanLabel}</span>
                </div>
              )}

              <ul class="plan-features">
                {plan.features.map((feature) => (
                  <li class="feature-item">
                    <span class="feature-check" set:html={checkIcon} />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>

    <p class="pricing-note" data-animate="fade">
      Alle Pläne mit 30 Tagen Free Trial · Keine Kreditkarte · Monatlich kündbar
    </p>
  </div>
</section>

<style is:global>
  .pricing-section {
    background: #07080f;
    padding: 5rem 1.5rem 6rem;
  }

  .pricing-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Header */
  .pricing-section .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .pricing-section .section-eyebrow {
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #4da6ff;
    margin-bottom: 0.75rem;
  }

  .pricing-section .section-h2 {
    font-size: clamp(1.875rem, 4vw, 2.625rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.03em;
    color: #f0f4ff;
    margin-bottom: 0.625rem;
  }

  .pricing-section .section-subtitle {
    font-size: 1rem;
    color: #6b7a99;
    line-height: 1.6;
  }

  /* Toggle */
  .billing-toggle-wrap {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .billing-toggle {
    display: inline-flex;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    padding: 4px;
    gap: 2px;
  }

  .toggle-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.125rem;
    border-radius: 7px;
    border: none;
    background: transparent;
    color: #6b7a99;
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .toggle-btn.is-active {
    background: rgba(255, 255, 255, 0.1);
    color: #f0f4ff;
    font-weight: 600;
  }

  .save-chip {
    display: inline-block;
    background: rgba(34, 197, 94, 0.15);
    color: #4ade80;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.15rem 0.5rem;
    border-radius: 100px;
    white-space: nowrap;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  /* Grid */
  .plans-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    align-items: start;
  }

  /* ── Float keyframes (on wrapper — no conflict with entry reveal) ── */
  @keyframes float-a {
    0%, 100% { transform: translateY(0px); }
    50%       { transform: translateY(-20px); }
  }
  @keyframes float-b {
    0%, 100% { transform: translateY(-8px); }
    50%       { transform: translateY(16px); }
  }
  @keyframes float-c {
    0%, 100% { transform: translateY(-6px); }
    50%       { transform: translateY(18px); }
  }
  @keyframes float-d {
    0%, 100% { transform: translateY(0px); }
    50%       { transform: translateY(-16px); }
  }

  /* Wrapper: owns float animation (transform only) */
  .card-float-wrap { position: relative; }
  .card-float-wrap:nth-child(1) { animation: float-a 5.2s ease-in-out infinite; }
  .card-float-wrap:nth-child(2) { animation: float-b 6.1s ease-in-out infinite; }
  .card-float-wrap:nth-child(3) { animation: float-c 4.8s ease-in-out infinite; }
  .card-float-wrap:nth-child(4) { animation: float-d 5.7s ease-in-out infinite; }
  .card-float-wrap:hover         { animation-play-state: paused; }

  /* Featured wrapper: extends slightly above/below others */
  .card-float-featured {
    margin-top: -1.25rem;
    margin-bottom: -1.25rem;
    z-index: 1;
  }

  /* ── Plan card: entry reveal (opacity + slide-up, owns no float) ── */
  .plan-card {
    background: var(--card-gradient);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 18px;
    overflow: hidden;
    position: relative;
    /* Start hidden + shifted down */
    opacity: 0;
    transform: translateY(70px) scale(0.96);
    transition:
      opacity   1.15s cubic-bezier(0.16, 1, 0.3, 1),
      transform 1.15s cubic-bezier(0.16, 1, 0.3, 1),
      box-shadow 0.2s ease;
  }

  .plan-card.is-revealed {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .plan-card:hover {
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
  }

  /* Featured card */
  .plan-featured {
    border-color: rgba(0, 102, 255, 0.35);
    box-shadow: 0 0 0 1px rgba(0, 102, 255, 0.15), 0 24px 60px rgba(0, 40, 120, 0.35);
  }

  .plan-featured:hover {
    box-shadow: 0 0 0 1px rgba(0, 102, 255, 0.25), 0 32px 70px rgba(0, 40, 120, 0.5);
  }

  /* Card visual top */
  .card-visual {
    position: relative;
    padding: 1.5rem 1.5rem 0;
    min-height: 80px;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  .card-icon {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: var(--icon-bg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
