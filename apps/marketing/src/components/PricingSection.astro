  /* Features divider */
  .features-divider {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.875rem;
  }

  .features-divider::before,
  .features-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: rgba(255, 255, 255, 0.07);
  }

  .features-divider span {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    color: #4a5568;
    white-space: nowrap;
  }

  /* Features list */
  .plan-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5625rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #6b7a99;
    line-height: 1.45;
  }

  .plan-featured .feature-item {
    color: #8aa3cc;
  }

  .feature-check {
    color: #4a5568;
    flex-shrink: 0;
    margin-top: 1px;
  }

  .plan-featured .feature-check {
    color: #3b82f6;
  }

  .pricing-note {
    text-align: center;
    font-size: 0.8125rem;
    color: #374151;
    margin-top: 3rem;
    letter-spacing: 0.01em;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .plans-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .card-float-featured {
      margin-top: 0;
      margin-bottom: 0;
    }
  }

  @media (max-width: 640px) {
    .plans-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // ── Card reveal: Pro first (index 2), then Starter, Plus, Unlimited ────────
  const grid = document.getElementById('pricing-grid');
  // Cards are inside .card-float-wrap, query .plan-card directly
  const cards = grid ? Array.from(grid.querySelectorAll<HTMLElement>('.plan-card')) : [];

  // Reveal order: Pro (2) → Starter (0) → Plus (1) → Unlimited (3)
  const revealOrder = [2, 0, 1, 3];

  function revealCards() {
    revealOrder.forEach((cardIndex, staggerStep) => {
      const card = cards[cardIndex];
      if (!card) return;
      // Stagger: 200ms between each card
      setTimeout(() => card.classList.add('is-revealed'), staggerStep * 200);
    });
  }

  if (grid) {
    const observer = new IntersectionObserver(
      (entries) => {
        if (entries[0].isIntersecting) {
          revealCards();
          observer.disconnect();
        }
      },
      { threshold: 0 }
    );
    observer.observe(grid);
  }

  // ── Price scramble animation ──────────────────────────────────────────────
  const DIGITS = '0123456789';
  const FRAMES = 22;
  const FRAME_MS = 28;

  function scramblePrice(el: HTMLElement, target: string) {
    let frame = 0;
    // Blur in
    el.style.transition = 'filter 0.12s, transform 0.12s';
    el.style.filter = 'blur(5px)';
    el.style.transform = 'scale(0.82)';

    setTimeout(() => {
      const interval = setInterval(() => {
        frame++;
        const progress = frame / FRAMES;

        el.textContent = target.split('').map((char, i) => {
          if (char === ',' || char === '.') return char;
          // Each digit settles left-to-right staggered
          const settleAt = i / target.replace(/[^0-9]/g, '').length;
          if (progress >= settleAt + 0.45) return char;
          return DIGITS[Math.floor(Math.random() * 10)];
        }).join('');

        // Progressively un-blur
        const blurVal = Math.max(0, 5 - progress * 7);
        const scaleVal = 0.82 + progress * 0.18;
        el.style.filter = `blur(${blurVal}px)`;
        el.style.transform = `scale(${scaleVal})`;

        if (frame >= FRAMES) {
          clearInterval(interval);
          el.textContent = target;
          el.style.filter = '';
          el.style.transform = '';
        }
      }, FRAME_MS);
    }, 120);
  }

  // ── Toggle ────────────────────────────────────────────────────────────────
  const monthlyBtn = document.getElementById('toggle-monthly');
  const annualBtn  = document.getElementById('toggle-annual');
  const saveChip   = document.querySelector<HTMLElement>('.save-chip');
  let currentPeriod = 'monthly';

  function setPeriod(period: string) {
    if (period === currentPeriod) return;
    const isAnnual = period === 'annual';
    currentPeriod = period;

    monthlyBtn?.classList.toggle('is-active', !isAnnual);
    annualBtn?.classList.toggle('is-active', isAnnual);

    document.querySelectorAll<HTMLElement>('.price-amount').forEach((el, i) => {
      const newVal = isAnnual
        ? (el.dataset.annual ?? el.dataset.monthly ?? '')
        : (el.dataset.monthly ?? '');
      setTimeout(() => scramblePrice(el, newVal), i * 55);
    });

    if (isAnnual && saveChip) {
      saveChip.classList.remove('popping');
      void saveChip.offsetWidth;
      saveChip.classList.add('popping');
      saveChip.addEventListener('animationend', () => saveChip.classList.remove('popping'), { once: true });
    }

    document.querySelectorAll<HTMLElement>('.price-note-monthly').forEach((el) => {
      el.style.display = isAnnual ? 'none' : '';
    });
    document.querySelectorAll<HTMLElement>('.price-note-annual').forEach((el) => {
      el.style.display = isAnnual ? '' : 'none';
    });
  }

  monthlyBtn?.addEventListener('click', () => setPeriod('monthly'));
  annualBtn?.addEventListener('click',  () => setPeriod('annual'));
</script>
