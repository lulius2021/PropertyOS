<style>
  .footer {
    background: var(--bg-footer);
    padding: 1.375rem 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 102, 255, 0.4) 30%,
      rgba(77, 166, 255, 0.6) 50%,
      rgba(0, 102, 255, 0.4) 70%,
      transparent 100%
    );
  }

  .footer-orb {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }

  .footer-orb-1 {
    width: 500px; height: 500px;
    bottom: -250px; left: -80px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.15) 0%, transparent 70%);
    filter: blur(130px);
    opacity: 0.07;
  }

  .footer-orb-2 {
    width: 350px; height: 350px;
    top: -120px; right: -60px;
    background: radial-gradient(circle, rgba(77, 166, 255, 0.15) 0%, transparent 70%);
    filter: blur(100px);
    opacity: 0.05;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  /* Left */
  .footer-left {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    text-decoration: none;
  }

  .footer-logo-img {
    width: 26px; height: 26px;
    border-radius: 6px;
    transition: filter 0.2s ease;
  }

  .footer-logo:hover .footer-logo-img {
    filter: drop-shadow(0 0 8px rgba(0, 102, 255, 0.4));
  }

  .footer-logo-text {
    font-size: 0.9rem;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: -0.02em;
  }

  .footer-logo-accent { color: #0066ff; }

  .footer-social {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px; height: 32px;
    border-radius: 8px;
    color: #ffffff;
    transition: color 0.15s ease, background 0.15s ease;
  }

  .social-link:hover {
    color: #4da6ff;
    background: rgba(77, 166, 255, 0.08);
  }

  /* Center */
  .footer-center {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .footer-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.15s ease;
  }

  .footer-link:hover { color: #4da6ff; }

  .footer-dot {
    color: #374151;
    font-size: 1rem;
    line-height: 1;
  }

  /* Right */
  .footer-right {
    display: flex;
    align-items: center;
    gap: 0.875rem;
  }

  .footer-badge {
    font-size: 0.75rem;
    color: #6b7280;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 999px;
    padding: 0.2rem 0.625rem;
    background: rgba(255, 255, 255, 0.03);
    white-space: nowrap;
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: #4b5563;
    white-space: nowrap;
  }

  @media (max-width: 900px) {
    .footer-row {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 1rem;
    }

    .footer-right {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
  }
</style>
