---
const items = [
  {
    label: 'DSGVO-konform',
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  },
  {
    label: 'EU-Hosting',
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/></svg>`,
  },
  {
    label: '2FA-Sicherheit',
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0110 0v4"/></svg>`,
  },
  {
    label: 'TÃ¤gliche Backups',
    icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="23 4 23 10 17 10"/><polyline points="1 20 1 14 7 14"/><path d="M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/></svg>`,
  },
];
---

<section class="trust-bar">
  <div class="trust-inner" data-stagger-parent>
    {items.map((item) => (
      <div class="trust-pill" data-stagger>
        <span class="trust-icon" set:html={item.icon} />
        <span class="trust-label">{item.label}</span>
      </div>
    ))}
  </div>
</section>

<style>
  .trust-bar {
    background: var(--bg-card);
    border-bottom: 1px solid var(--border-card);
    padding: 1.25rem 1.5rem;
  }

  .trust-inner {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem 2rem;
  }

  .trust-pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .trust-icon {
    display: flex;
    align-items: center;
    color: #0066ff;
  }

  .trust-label {
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .trust-bar {
      padding: 1rem;
    }

    .trust-inner {
      gap: 0.625rem 1.25rem;
    }

    .trust-pill {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 420px) {
    .trust-inner {
      justify-content: flex-start;
      gap: 0.5rem 1rem;
    }

    .trust-label {
      white-space: normal;
    }
  }
</style>
