---
import { APP_URL } from '../config/urls';
---

<section class="hero-section" data-dark>
  <!-- Dot Grid Overlay -->
  <div class="dot-grid" aria-hidden="true"></div>

  <!-- Glow Orbs -->
  <div class="orb orb-1" aria-hidden="true"></div>
  <div class="orb orb-2" aria-hidden="true"></div>
  <div class="orb orb-3" aria-hidden="true"></div>

  <!-- Floating particles -->
  <div class="particle" style="left:12%;bottom:22%;--delay:0s;--dur:6s;--dx:25px" aria-hidden="true"></div>
  <div class="particle" style="left:22%;bottom:14%;--delay:1.8s;--dur:8s;--dx:-30px" aria-hidden="true"></div>
  <div class="particle" style="left:42%;bottom:9%;--delay:0.6s;--dur:7s;--dx:35px" aria-hidden="true"></div>
  <div class="particle" style="left:62%;bottom:17%;--delay:2.5s;--dur:5.5s;--dx:-22px" aria-hidden="true"></div>
  <div class="particle" style="left:75%;bottom:11%;--delay:0.3s;--dur:9s;--dx:18px" aria-hidden="true"></div>
  <div class="particle" style="left:86%;bottom:26%;--delay:2s;--dur:6.5s;--dx:-28px" aria-hidden="true"></div>

  <div class="hero-container">
    <div class="hero-text">
<!-- Headline â€” line by line reveal -->
    <h1 class="hero-h1">
      <span class="line-wrap"><span class="h-line-1">Immobilienverwaltung,</span></span>
      <span class="line-wrap"><span class="h-line-2">die wirklich</span></span>
      <span class="line-wrap"><span class="h-line-3 gradient-text">funktioniert.</span></span>
    </h1>

    <!-- Subtext -->
    <div class="hero-sub-wrap">
      <p class="hero-subtext">
        PropGate ist die cloudbasierte Software fÃ¼r professionelle Immobilienverwaltung.
        Objekte, Mieter, Bankimport, Mahnwesen und Tickets â€” alles in einem. DSGVO-konform.
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="hero-cta-wrap">
      <div class="hero-cta">
        <a href={`${APP_URL}/register`} class="cta-primary magnetic">
          Kostenlos starten
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/features" class="cta-secondary">
          Alle Features ansehen
        </a>
      </div>
    </div>

    </div><!-- /hero-text -->

    <!-- Browser Mockup -->
    <div data-animate="scale" data-delay="2" class="browser-mockup-wrapper">
      <!-- Rotate hint button â€” only visible on mobile portrait -->
      <button class="rotate-btn" id="rotate-btn" aria-label="Im Querformat anzeigen">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M21.5 2v6h-6"/><path d="M21.34 15.57a10 10 0 1 1-.57-8.38"/>
        </svg>
        <span id="rotate-btn-label">Querformat fÃ¼r bessere Ansicht</span>
      </button>
      <div class="demo-overlay" id="demo-overlay-btn" role="button" tabindex="0" aria-label="Live Demo starten">
        <button class="demo-btn" id="demo-open-btn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M8 5v14l11-7z"/>
          </svg>
          Live Demo starten
        </button>
      </div>
      <div class="browser-mockup">
        <!-- Browser Chrome -->
        <div class="browser-chrome">
          <div class="traffic-lights">
            <div class="tl tl-red"></div>
            <div class="tl tl-yellow"></div>
            <div class="tl tl-green"></div>
          </div>
          <div class="url-bar">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0110 0v4"></path>
            </svg>
            <span>app.propgate.de/dashboard</span>
          </div>
        </div>

        <!-- Dashboard Preview -->
        <div class="dashboard-preview">
          <div class="browser-scan-line"></div>

          <!-- Sidebar -->
          <div class="dash-sidebar">
            <div class="dash-nav-item dash-nav-active">
              <div class="dash-nav-icon"></div>
              <div class="dash-nav-label"></div>
            </div>
            <div class="dash-nav-item">
              <div class="dash-nav-icon"></div>
              <div class="dash-nav-label"></div>
            </div>
            <div class="dash-nav-item">
              <div class="dash-nav-icon"></div>
              <div class="dash-nav-label"></div>
            </div>
            <div class="dash-nav-item">
              <div class="dash-nav-icon"></div>
              <div class="dash-nav-label"></div>
            </div>
            <div class="dash-nav-item">
              <div class="dash-nav-icon"></div>
              <div class="dash-nav-label"></div>
            </div>
          </div>

          <!-- Main Content -->
          <div class="dash-main">
            <!-- Header bar -->
            <div class="dash-header-row">
              <div class="dash-page-title"></div>
              <div class="dash-header-btn"></div>
            </div>

            <!-- Stats -->
            <div class="dash-stats">
              <div class="dash-stat">
                <div class="stat-label"></div>
                <div class="stat-value stat-blue"></div>
                <div class="stat-change stat-up"></div>
              </div>
              <div class="dash-stat">
                <div class="stat-label"></div>
                <div class="stat-value stat-green"></div>
                <div class="stat-change stat-up"></div>
              </div>
              <div class="dash-stat">
                <div class="stat-label"></div>
                <div class="stat-value stat-orange"></div>
                <div class="stat-change"></div>
              </div>
              <div class="dash-stat">
                <div class="stat-label"></div>
                <div class="stat-value stat-purple"></div>
                <div class="stat-change stat-up"></div>
              </div>
            </div>

            <!-- Table -->
            <div class="dash-table">
              <div class="table-header">
                <div class="th th-wide"></div>
                <div class="th th-mid"></div>
                <div class="th th-mid"></div>
                <div class="th th-narrow"></div>
              </div>
              <div class="table-row">
                <div class="td td-wide">
                  <div class="td-dot dot-green"></div>
                  <div class="td-text"></div>
                </div>
                <div class="td td-mid"></div>
                <div class="td td-mid td-green"></div>
                <div class="td td-narrow">
                  <div class="td-badge"></div>
                </div>
              </div>
              <div class="table-row">
                <div class="td td-wide">
                  <div class="td-dot dot-blue"></div>
                  <div class="td-text"></div>
                </div>
                <div class="td td-mid"></div>
                <div class="td td-mid td-blue"></div>
                <div class="td td-narrow">
                  <div class="td-badge"></div>
                </div>
              </div>
              <div class="table-row">
                <div class="td td-wide">
                  <div class="td-dot dot-orange"></div>
                  <div class="td-text"></div>
                </div>
                <div class="td td-mid"></div>
                <div class="td td-mid td-orange"></div>
                <div class="td td-narrow">
                  <div class="td-badge"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    background: var(--bg);
    position: relative;
    overflow: hidden;
    padding: 6rem 1.5rem 5rem;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  /* Glow Orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    pointer-events: none;
  }

  .orb-1 {
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.45) 0%, transparent 70%);
    top: -200px;
    left: -100px;
  }

  .orb-2 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.35) 0%, transparent 70%);
    top: 10%;
    right: -150px;
  }

  .orb-3 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(77, 166, 255, 0.3) 0%, transparent 70%);
    bottom: 5%;
    left: 30%;
  }

  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 5fr 7fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 102, 255, 0.1);
    border: 1px solid rgba(0, 102, 255, 0.25);
    color: #4da6ff;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.4rem 0.875rem;
    border-radius: 100px;
    margin-bottom: 2rem;
    cursor: default;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #0066ff;
    box-shadow: 0 0 8px rgba(0, 102, 255, 0.8);
  }

  /* Headline */
  .hero-h1 {
    font-size: clamp(2.2rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.08;
    letter-spacing: -0.04em;
    color: var(--heading);
    margin: 0 0 1.5rem;
    padding: 0;
  }

  /* Subtext */
  .hero-subtext {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-muted);
    max-width: 520px;
    margin: 0 0 2.5rem;
  }

  /* CTA */
  .hero-cta {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #0066ff;
    color: #ffffff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.875rem 1.75rem;
    border-radius: 10px;
    transition: background 0.15s ease, box-shadow 0.15s ease;
  }

  .cta-primary:hover {
    background: #0052cc;
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.875rem 1.5rem;
    border-radius: 10px;
    border: 1px solid var(--border);
    transition: color 0.15s ease, border-color 0.15s ease, background 0.15s ease;
  }

  .cta-secondary:hover {
    color: var(--text);
    border-color: var(--border);
    background: var(--bg-card);
  }

  /* Browser Mockup Wrapper */
  .browser-mockup-wrapper {
    width: 100%;
    position: relative;
  }

  /* Demo Overlay */
  .demo-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.42);
    backdrop-filter: blur(3px);
    border-radius: 12px;
    z-index: 10;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .demo-overlay:hover {
    background: rgba(0, 0, 0, 0.32);
  }

  .demo-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    background: #0066ff;
    color: #ffffff;
    border: none;
    font-size: 1.0625rem;
    font-weight: 700;
    padding: 0.9rem 2rem;
    border-radius: 12px;
    cursor: pointer;
    transition: transform 0.18s ease, box-shadow 0.18s ease, background 0.15s ease;
    box-shadow: 0 0 0 0 rgba(0, 102, 255, 0.5), 0 8px 32px rgba(0, 102, 255, 0.4);
    animation: btn-pulse 2.4s ease-in-out infinite;
  }

  .demo-btn:hover {
    transform: scale(1.04);
    background: #0052cc;
    box-shadow: 0 0 0 6px rgba(0, 102, 255, 0.18), 0 12px 40px rgba(0, 102, 255, 0.5);
    animation: none;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(0, 102, 255, 0.5), 0 8px 32px rgba(0, 102, 255, 0.4); }
    50% { box-shadow: 0 0 0 10px rgba(0, 102, 255, 0), 0 8px 32px rgba(0, 102, 255, 0.4); }
  }

  /* Browser Mockup */
  .browser-mockup {
    background: #13141a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 40px 80px rgba(0, 0, 0, 0.5),
      0 0 60px rgba(0, 102, 255, 0.08);
  }

  .browser-chrome {
    background: #1a1b22;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .traffic-lights {
    display: flex;
    gap: 6px;
    flex-shrink: 0;
  }

  .tl {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .tl-red { background: #ff5f57; }
  .tl-yellow { background: #ffbd2e; }
  .tl-green { background: #28c840; }

  .url-bar {
    flex: 1;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    padding: 0.35rem 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6b7280;
    font-size: 0.8125rem;
    max-width: 360px;
    margin: 0 auto;
  }

  .url-bar svg {
    flex-shrink: 0;
    color: #4da6ff;
  }

  /* Dashboard Preview */
  .dashboard-preview {
    display: grid;
    grid-template-columns: 180px 1fr;
    height: 360px;
    position: relative;
  }

  .dash-sidebar {
    background: #0f1015;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
    padding: 1rem 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .dash-nav-item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.5rem 0.625rem;
    border-radius: 6px;
  }

  .dash-nav-active {
    background: rgba(0, 102, 255, 0.15);
  }

  .dash-nav-icon {
    width: 16px;
    height: 16px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.15);
    flex-shrink: 0;
  }

  .dash-nav-active .dash-nav-icon {
    background: rgba(0, 102, 255, 0.6);
  }

  .dash-nav-label {
    flex: 1;
    height: 8px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.1);
  }

  .dash-nav-active .dash-nav-label {
    background: rgba(0, 102, 255, 0.4);
  }

  .dash-main {
    padding: 1.25rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    overflow: hidden;
  }

  .dash-header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .dash-page-title {
    height: 18px;
    width: 160px;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.15);
  }

  .dash-header-btn {
    height: 28px;
    width: 100px;
    border-radius: 6px;
    background: rgba(0, 102, 255, 0.4);
  }

  /* Stats Row */
  .dash-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
  }

  .dash-stat {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 8px;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .stat-label {
    height: 7px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.1);
    width: 60%;
  }

  .stat-value {
    height: 22px;
    border-radius: 4px;
    width: 70%;
  }

  .stat-change {
    height: 6px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.06);
    width: 40%;
  }

  .stat-up { background: rgba(34, 197, 94, 0.25); }

  .stat-blue { background: rgba(0, 102, 255, 0.5); }
  .stat-green { background: rgba(34, 197, 94, 0.5); }
  .stat-orange { background: rgba(249, 115, 22, 0.5); }
  .stat-purple { background: rgba(139, 92, 246, 0.5); }

  /* Table */
  .dash-table {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    overflow: hidden;
  }

  .table-header {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(255, 255, 255, 0.02);
  }

  .th {
    height: 7px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.08);
  }

  .th-wide { flex: 2; }
  .th-mid { flex: 1; }
  .th-narrow { flex: 0.6; }

  .table-row {
    display: flex;
    gap: 0.5rem;
    padding: 0.625rem 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    align-items: center;
  }

  .table-row:last-child { border-bottom: none; }

  .td {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .td-wide { flex: 2; }
  .td-mid { flex: 1; }
  .td-narrow { flex: 0.6; }

  .td-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .dot-green { background: #22c55e; }
  .dot-blue { background: #0066ff; }
  .dot-orange { background: #f97316; }

  .td-text {
    flex: 1;
    height: 8px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.1);
  }

  .td-badge {
    width: 48px;
    height: 18px;
    border-radius: 100px;
    background: rgba(255, 255, 255, 0.08);
  }

  .td-green { background: rgba(34, 197, 94, 0.15); border-radius: 4px; height: 8px; }
  .td-blue { background: rgba(0, 102, 255, 0.15); border-radius: 4px; height: 8px; }
  .td-orange { background: rgba(249, 115, 22, 0.15); border-radius: 4px; height: 8px; }

  @media (max-width: 1100px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero-text {
      align-items: center;
      text-align: center;
    }

    .hero-subtext {
      margin: 0 auto 2.5rem;
    }

    .hero-cta {
      justify-content: center;
      margin-bottom: 0;
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 5rem 1.25rem 3.5rem;
      min-height: auto;
    }

    .hero-h1 {
      font-size: 2.5rem;
    }

    .dash-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .dashboard-preview {
      grid-template-columns: 140px 1fr;
      height: 280px;
    }
  }

  @media (max-width: 520px) {
    .dash-sidebar {
      display: none;
    }
    .dashboard-preview {
      grid-template-columns: 1fr;
    }
  }

  /* Rotate button â€” hidden by default, shown only on mobile portrait */
  .rotate-btn {
    display: none;
  }

  @media (max-width: 768px) and (orientation: portrait) {
    /* Compact mockup height in portrait */
    .dashboard-preview {
      height: 220px;
    }

    /* Show rotate button */
    .rotate-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
      background: rgba(0, 102, 255, 0.1);
      border: 1px solid rgba(0, 102, 255, 0.25);
      color: #4da6ff;
      font-size: 0.8125rem;
      font-weight: 500;
      padding: 0.375rem 0.875rem;
      border-radius: 999px;
      cursor: pointer;
      transition: background 0.15s ease;
    }

    .rotate-btn:hover {
      background: rgba(0, 102, 255, 0.18);
    }
  }

  /* In landscape: full height, hide rotate button */
  @media (max-width: 900px) and (orientation: landscape) {
    .rotate-btn {
      display: none !important;
    }

    .dashboard-preview {
      height: 320px;
    }
  }

  @media (max-width: 480px) {
    .hero-section {
      padding: 4.5rem 1rem 3rem;
    }

    .hero-h1 {
      font-size: clamp(1.75rem, 8vw, 2.2rem);
    }

    .hero-subtext {
      font-size: 1rem;
    }

    .hero-cta {
      flex-wrap: nowrap;
      gap: 0.625rem;
    }

    .cta-primary,
    .cta-secondary {
      font-size: 0.875rem;
      padding: 0.75rem 1.125rem;
      white-space: nowrap;
    }

    .browser-chrome {
      padding: 0.5rem 0.75rem;
    }

    .url-bar {
      max-width: 100%;
      font-size: 0.75rem;
    }

    .dashboard-preview {
      height: 220px;
    }

    .demo-btn {
      font-size: 0.9375rem;
      padding: 0.75rem 1.5rem;
    }

    .dash-stats {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* â”€â”€ Light theme: browser mockup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  html[data-theme="light"] .browser-mockup {
    background: #ffffff;
    border-color: rgba(0, 0, 0, 0.1);
    box-shadow:
      0 0 0 1px rgba(0, 0, 0, 0.05),
      0 40px 80px rgba(0, 0, 0, 0.12),
      0 0 60px rgba(0, 102, 255, 0.06);
  }

