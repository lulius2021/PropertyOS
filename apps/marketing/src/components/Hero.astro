<style>
  .hero-section {
    background: #0a0a0f;
    position: relative;
    overflow: hidden;
    padding: 6rem 1.5rem 5rem;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  /* Glow Orbs */
  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    pointer-events: none;
  }

  .orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.25) 0%, transparent 70%);
    top: -200px;
    left: -100px;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(0, 102, 255, 0.15) 0%, transparent 70%);
    top: 10%;
    right: -150px;
  }

  .orb-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(77, 166, 255, 0.12) 0%, transparent 70%);
    bottom: 5%;
    left: 30%;
  }

  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 960px;
    margin: 0 auto;
    text-align: center;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(0, 102, 255, 0.1);
    border: 1px solid rgba(0, 102, 255, 0.25);
    color: #4da6ff;
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.4rem 0.875rem;
    border-radius: 100px;
    margin-bottom: 2rem;
    cursor: default;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #0066ff;
    box-shadow: 0 0 8px rgba(0, 102, 255, 0.8);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Headline */
  .hero-h1 {
    font-size: clamp(3rem, 7vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.04em;
    color: #ffffff;
    margin-bottom: 1.5rem;
  }

  .gradient-text {
    background: linear-gradient(135deg, #0066ff 0%, #4da6ff 50%, #66b8ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Subtext */
  .hero-subtext {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #a0a8b8;
    max-width: 600px;
    margin: 0 auto 2.5rem;
  }

  /* CTA */
  .hero-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #0066ff;
    color: #ffffff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.875rem 1.75rem;
    border-radius: 10px;
    transition: background 0.15s ease, transform 0.1s ease, box-shadow 0.15s ease;
    box-shadow: 0 0 24px rgba(0, 102, 255, 0.3);
  }

  .cta-primary:hover {
    background: #0052cc;
    transform: translateY(-2px);
    box-shadow: 0 0 32px rgba(0, 102, 255, 0.45);
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #a0a8b8;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.875rem 1.5rem;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: color 0.15s ease, border-color 0.15s ease, background 0.15s ease;
  }

  .cta-secondary:hover {
    color: #ffffff;
    border-color: rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.04);
  }

  /* Browser Mockup */
  .browser-mockup {
    background: #13141a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 40px 80px rgba(0, 0, 0, 0.5),
      0 0 60px rgba(0, 102, 255, 0.08);
    max-width: 900px;
    margin: 0 auto;
  }

  .browser-chrome {
    background: #1a1b22;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .traffic-lights {
    display: flex;
    gap: 6px;
    flex-shrink: 0;
  }

  .tl {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .tl-red { background: #ff5f57; }
  .tl-yellow { background: #ffbd2e; }
  .tl-green { background: #28c840; }

  .url-bar {
    flex: 1;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    padding: 0.35rem 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6b7280;
    font-size: 0.8125rem;
    max-width: 360px;
    margin: 0 auto;
  }

  .url-bar svg {
    flex-shrink: 0;
    color: #4da6ff;
  }

  /* Dashboard Preview */
  .dashboard-preview {
    display: grid;
    grid-template-columns: 180px 1fr;
    height: 360px;
  }

  .dash-sidebar {
    background: #0f1015;
    border-right: 1px solid rgba(255, 255, 255, 0.05);
    padding: 1rem 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .dash-nav-item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.5rem 0.625rem;
    border-radius: 6px;
  }

  .dash-nav-active {
    background: rgba(0, 102, 255, 0.15);
  }

  .dash-nav-icon {
    width: 16px;
    height: 16px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.15);
    flex-shrink: 0;
  }

  .dash-nav-active .dash-nav-icon {
    background: rgba(0, 102, 255, 0.6);
  }

  .dash-nav-label {
    flex: 1;
    height: 8px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.1);
  }

  .dash-nav-active .dash-nav-label {
    background: rgba(0, 102, 255, 0.4);
  }

  .dash-main {
    padding: 1.25rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    overflow: hidden;
  }

  .dash-header-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .dash-page-title {
    height: 18px;
    width: 160px;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.15);
  }

  .dash-header-btn {
    height: 28px;
    width: 100px;
    border-radius: 6px;
    background: rgba(0, 102, 255, 0.4);
  }

  /* Stats Row */
  .dash-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
  }

  .dash-stat {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 8px;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .stat-label {
    height: 7px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.1);
    width: 60%;
  }

  .stat-value {
    height: 22px;
    border-radius: 4px;
    width: 70%;
  }

  .stat-change {
    height: 6px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.06);
    width: 40%;
  }

  .stat-up { background: rgba(34, 197, 94, 0.25); }

  .stat-blue { background: rgba(0, 102, 255, 0.5); }
  .stat-green { background: rgba(34, 197, 94, 0.5); }
  .stat-orange { background: rgba(249, 115, 22, 0.5); }
  .stat-purple { background: rgba(139, 92, 246, 0.5); }

  /* Table */
  .dash-table {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    overflow: hidden;
  }

  .table-header {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(255, 255, 255, 0.02);
  }

  .th {
    height: 7px;
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.08);
  }

  .th-wide { flex: 2; }
  .th-mid { flex: 1; }
  .th-narrow { flex: 0.6; }

  .table-row {
    display: flex;
    gap: 0.5rem;
    padding: 0.625rem 0.75rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    align-items: center;
  }

  .table-row:last-child { border-bottom: none; }

  .td {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .td-wide { flex: 2; }
  .td-mid { flex: 1; }
  .td-narrow { flex: 0.6; }

  .td-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .dot-green { background: #22c55e; }
  .dot-blue { background: #0066ff; }
  .dot-orange { background: #f97316; }

  .td-text {
    flex: 1;
    height: 8px;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.1);
  }

  .td-badge {
    width: 48px;
    height: 18px;
    border-radius: 100px;
    background: rgba(255, 255, 255, 0.08);
  }

  .td-green { background: rgba(34, 197, 94, 0.15); border-radius: 4px; height: 8px; }
  .td-blue { background: rgba(0, 102, 255, 0.15); border-radius: 4px; height: 8px; }
  .td-orange { background: rgba(249, 115, 22, 0.15); border-radius: 4px; height: 8px; }

  @media (max-width: 768px) {
    .hero-section {
      padding: 5rem 1.25rem 3.5rem;
      min-height: auto;
    }

    .hero-h1 {
      font-size: 2.5rem;
    }

    .dash-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .dashboard-preview {
      grid-template-columns: 140px 1fr;
      height: 280px;
    }
  }

  @media (max-width: 520px) {
    .dash-sidebar {
      display: none;
    }
    .dashboard-preview {
      grid-template-columns: 1fr;
    }
  }
</style>
