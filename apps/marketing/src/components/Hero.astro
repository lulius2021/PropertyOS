<script>
  const rotateBtn = document.getElementById('rotate-btn');
  const rotateBtnLabel = document.getElementById('rotate-btn-label');

  rotateBtn?.addEventListener('click', async () => {
    try {
      // Try to request fullscreen + lock landscape orientation
      await document.documentElement.requestFullscreen?.();
      await (screen.orientation as any).lock('landscape');
    } catch {
      // Fallback: show a manual rotation hint
      if (rotateBtnLabel) {
        rotateBtnLabel.textContent = 'GerÃ¤t bitte seitlich halten ðŸ”„';
      }
      rotateBtn!.style.background = 'rgba(0, 102, 255, 0.2)';
      // Reset label after 3s
      setTimeout(() => {
        if (rotateBtnLabel) rotateBtnLabel.textContent = 'Querformat fÃ¼r bessere Ansicht';
        rotateBtn!.style.background = '';
      }, 3000);
    }
  });

  // Hide rotate button when device is actually in landscape
  window.addEventListener('orientationchange', () => {
    if (rotateBtn) {
      rotateBtn.style.display =
        window.innerWidth > window.innerHeight ? 'none' : '';
    }
  });
</script>
