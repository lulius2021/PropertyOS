---

<section class="bg-gradient-to-b from-blue-50 to-white py-20">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-6xl">
      <!-- Text Content -->
      <div class="mb-12 text-center">
        <h1 class="mb-6 text-5xl font-bold text-gray-900 md:text-6xl">
          Moderne Hausverwaltung
          <span class="text-blue-600">neu gedacht</span>
        </h1>
        <p class="mb-8 text-xl text-gray-600">
          PropertyOS ist die cloudbasierte Software für operativen Tagesbetrieb: Objektverwaltung,
          Bankimport, Mahnwesen, Tickets & mehr. DSGVO-konform und benutzerfreundlich.
        </p>
        <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
          <a
            href="https://app.propertyos.de/login"
            class="rounded-lg bg-blue-600 px-8 py-3 font-medium text-white hover:bg-blue-700"
          >
            Zum Dashboard
          </a>
          <a
            href="/features"
            class="rounded-lg border border-gray-300 bg-white px-8 py-3 font-medium text-gray-700 hover:bg-gray-50"
          >
            Mehr erfahren
          </a>
        </div>
      </div>

      <!-- Dashboard Mockup Placeholder -->
      <div class="mx-auto max-w-5xl">
        <div class="overflow-hidden rounded-xl border-2 border-gray-200 bg-white shadow-2xl">
          <!-- Browser Chrome -->
          <div class="flex items-center gap-2 border-b bg-gray-100 px-4 py-3">
            <div class="flex gap-2">
              <div class="h-3 w-3 rounded-full bg-red-400"></div>
              <div class="h-3 w-3 rounded-full bg-yellow-400"></div>
              <div class="h-3 w-3 rounded-full bg-green-400"></div>
            </div>
            <div class="ml-4 flex-1 rounded bg-white px-3 py-1 text-sm text-gray-500">
              app.propertyos.de
            </div>
          </div>

          <!-- Dashboard Preview -->
          <div class="aspect-video bg-gradient-to-br from-gray-50 to-gray-100 p-8">
            <div class="grid h-full grid-cols-3 gap-6">
              <!-- Sidebar -->
              <div class="space-y-2">
                <div class="h-8 rounded bg-blue-600 opacity-80"></div>
                <div class="h-6 rounded bg-gray-300"></div>
                <div class="h-6 rounded bg-gray-300"></div>
                <div class="h-6 rounded bg-gray-300"></div>
                <div class="h-6 rounded bg-gray-300"></div>
              </div>

              <!-- Main Content -->
              <div class="col-span-2 space-y-4">
                <div class="h-10 w-2/3 rounded bg-gray-300"></div>
                <div class="grid grid-cols-3 gap-4">
                  <div class="rounded-lg bg-white p-4 shadow">
                    <div class="mb-2 h-3 w-16 rounded bg-gray-300"></div>
                    <div class="h-8 w-20 rounded bg-blue-600"></div>
                  </div>
                  <div class="rounded-lg bg-white p-4 shadow">
                    <div class="mb-2 h-3 w-16 rounded bg-gray-300"></div>
                    <div class="h-8 w-20 rounded bg-green-600"></div>
                  </div>
                  <div class="rounded-lg bg-white p-4 shadow">
                    <div class="mb-2 h-3 w-16 rounded bg-gray-300"></div>
                    <div class="h-8 w-20 rounded bg-orange-600"></div>
                  </div>
                </div>
                <div class="rounded-lg bg-white p-4 shadow">
                  <div class="mb-3 h-4 w-32 rounded bg-gray-300"></div>
                  <div class="space-y-2">
                    <div class="h-3 w-full rounded bg-gray-200"></div>
                    <div class="h-3 w-full rounded bg-gray-200"></div>
                    <div class="h-3 w-3/4 rounded bg-gray-200"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature Pills -->
        <div class="mt-8 flex flex-wrap justify-center gap-3">
          <span
            class="rounded-full bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm"
          >
            ✓ Cloud-basiert
          </span>
          <span
            class="rounded-full bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm"
          >
            ✓ DSGVO-konform
          </span>
          <span
            class="rounded-full bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm"
          >
            ✓ Auto-Matching
          </span>
          <span
            class="rounded-full bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm"
          >
            ✓ Mahnwesen
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
