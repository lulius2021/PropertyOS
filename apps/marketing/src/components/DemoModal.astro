<div id="demo-modal" class="demo-modal-backdrop" aria-modal="true" role="dialog" aria-label="Live Demo">
  <div class="demo-modal-panel">
    <!-- Header -->
    <div class="demo-modal-header">
      <div class="demo-modal-title">
        <svg width="22" height="22" viewBox="0 0 32 32" fill="none" aria-hidden="true">
          <rect width="32" height="32" rx="8" fill="#0066ff"/>
          <path d="M10 16C10 12.686 12.686 10 16 10s6 2.686 6 6-2.686 6-6 6-6-2.686-6-6z" fill="white" opacity="0.3"/>
          <path d="M16 8a8 8 0 100 16A8 8 0 0016 8zm-1 11.5v-7l5 3.5-5 3.5z" fill="white"/>
        </svg>
        <span>PropGate <strong>Live Demo</strong></span>
      </div>
      <div class="demo-badge">Demo &middot; admin@demo.de</div>
      <button class="demo-close-btn" id="demo-close" aria-label="Demo schließen">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Body -->
    <div class="demo-modal-body">
      <div class="demo-loader" id="demo-loader">
        <div class="demo-spinner"></div>
        <p>App wird geladen…</p>
      </div>
      <iframe
        id="demo-iframe"
        src=""
        allow="fullscreen"
        title="PropGate Live Demo"
        class="demo-iframe"
      ></iframe>
    </div>
  </div>
</div>

<style is:global>
  .demo-modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.72);
    backdrop-filter: blur(6px);
    z-index: 9000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.28s ease;
  }

  .demo-modal-backdrop.is-open {
    opacity: 1;
    pointer-events: all;
  }

  .demo-modal-panel {
    background: #111218;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    width: 100%;
    max-width: 1400px;
    height: 94vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: 0 40px 100px rgba(0, 0, 0, 0.7), 0 0 0 1px rgba(255, 255, 255, 0.05);
    transform: scale(0.95);
    transition: transform 0.28s ease;
  }

  .demo-modal-backdrop.is-open .demo-modal-panel {
    transform: scale(1);
  }

  /* Header */
  .demo-modal-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0 1.25rem;
    height: 52px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.07);
    background: #0f1015;
    flex-shrink: 0;
  }

  .demo-modal-title {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    color: #e5e7eb;
    font-size: 0.9375rem;
  }

  .demo-modal-title strong {
    color: #fff;
  }

  .demo-badge {
    font-size: 0.8125rem;
    font-weight: 500;
    color: #4da6ff;
    background: rgba(0, 102, 255, 0.12);
    border: 1px solid rgba(0, 102, 255, 0.25);
    padding: 0.2rem 0.625rem;
    border-radius: 100px;
    margin-left: auto;
  }

  .demo-close-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: #9ca3af;
    cursor: pointer;
    transition: background 0.15s ease, color 0.15s ease;
  }

  .demo-close-btn:hover {
    background: rgba(255, 255, 255, 0.12);
    color: #fff;
  }

  /* Body */
  .demo-modal-body {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .demo-loader {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: #111218;
    color: #6b7280;
    font-size: 0.9375rem;
    z-index: 1;
    transition: opacity 0.3s ease;
  }

  .demo-loader.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .demo-spinner {
    width: 36px;
    height: 36px;
    border: 3px solid rgba(255, 255, 255, 0.08);
    border-top-color: #0066ff;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .demo-iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }
</style>

<script>
  const openBtn = document.getElementById('demo-open-btn');
  const overlayBtn = document.getElementById('demo-overlay-btn');
  const modal = document.getElementById('demo-modal');
  const iframe = document.getElementById('demo-iframe') as HTMLIFrameElement | null;
  const closeBtn = document.getElementById('demo-close');
  const loader = document.getElementById('demo-loader');

  function openDemo() {
    if (!modal || !iframe) return;
    if (!iframe.src) {
      iframe.src = 'https://property-os-beige.vercel.app/demo-login';
    }
    modal.classList.add('is-open');
    document.body.style.overflow = 'hidden';
  }

  function closeDemo() {
    if (!modal) return;
    modal.classList.remove('is-open');
    document.body.style.overflow = '';
    setTimeout(() => {
      if (iframe) iframe.src = '';
      if (loader) loader.classList.remove('hidden');
    }, 300);
  }

  iframe?.addEventListener('load', () => {
    loader?.classList.add('hidden');
  });

  openBtn?.addEventListener('click', openDemo);
  overlayBtn?.addEventListener('click', openDemo);
  overlayBtn?.addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key === 'Enter' || e.key === ' ') openDemo();
  });
  closeBtn?.addEventListener('click', closeDemo);
  modal?.addEventListener('click', (e: MouseEvent) => {
    if (e.target === modal) closeDemo();
  });
  document.addEventListener('keydown', (e: KeyboardEvent) => {
    if (e.key === 'Escape') closeDemo();
  });
</script>
