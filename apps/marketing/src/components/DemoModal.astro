---
import { APP_URL } from '../config/urls';
---

<div id="demo-modal" class="demo-modal-backdrop" aria-modal="true" role="dialog" aria-label="Live Demo" data-app-url={APP_URL}>
  <div class="demo-modal-panel">

    <!-- Modal Header (dark shell) -->
    <div class="demo-modal-header">
      <div class="demo-modal-title">
        <svg width="22" height="22" viewBox="0 0 32 32" fill="none" aria-hidden="true">
          <rect width="32" height="32" rx="8" fill="#0066ff"/>
          <path d="M16 8a8 8 0 100 16A8 8 0 0016 8zm-1 11.5v-7l5 3.5-5 3.5z" fill="white"/>
        </svg>
        <span>PropGate <strong>Live Demo</strong></span>
      </div>
      <div class="demo-badge">Demo · admin@demo.de</div>
      <button class="demo-close-btn" id="demo-close" aria-label="Demo schließen">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6L6 18M6 6l12 12"/></svg>
      </button>
    </div>

    <!-- Static Demo App (light theme) -->
    <div class="demo-modal-body">
      <div class="da-app">

        <!-- ── Sidebar ─────────────────────────────── -->
        <aside class="da-sidebar">
          <div class="da-brand">
            <svg width="28" height="28" viewBox="0 0 32 32" fill="none"><rect width="32" height="32" rx="8" fill="#0066ff"/><path d="M16 8a8 8 0 100 16A8 8 0 0016 8zm-1 11.5v-7l5 3.5-5 3.5z" fill="white"/></svg>
            <span class="da-brand-name">Prop<span class="da-brand-accent">Gate</span></span>
          </div>

          <div class="da-tenant-selector">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
            <span>Demo Immobilien GmbH</span>
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="margin-left:auto;flex-shrink:0"><polyline points="6 9 12 15 18 9"/></svg>
          </div>

          <nav class="da-nav">
            <button class="da-nav-btn is-active" data-view="dashboard">
              <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/></svg>
              Dashboard
            </button>
            <button class="da-nav-btn" data-view="objekte">
              <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
              Objekte
            </button>
            <button class="da-nav-btn" data-view="einheiten">
              <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="2" width="16" height="20" rx="2"/><line x1="8" y1="6" x2="16" y2="6"/><line x1="8" y1="10" x2="16" y2="10"/><line x1="8" y1="14" x2="16" y2="14"/></svg>
              Einheiten
            </button>
            <button class="da-nav-btn" data-view="mieter">
