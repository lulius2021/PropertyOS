<script>
  // ── Modal open / close ─────────────────────────────
  const openBtn    = document.getElementById('demo-open-btn');
  const overlayBtn = document.getElementById('demo-overlay-btn');
  const modal      = document.getElementById('demo-modal');
  const closeBtn   = document.getElementById('demo-close');

  // ── Mobile scale: preserve desktop layout ──────────
  function applyMobileScale() {
    const body = modal?.querySelector('.demo-modal-body') as HTMLElement | null;
    const app  = modal?.querySelector('.da-app') as HTMLElement | null;
    if (!body || !app) return;
    if (window.innerWidth <= 768) {
      const scale = body.clientWidth / 1100;
      app.style.setProperty('--ms', String(scale));
    } else {
      app.style.removeProperty('--ms');
    }
  }
  applyMobileScale();
  window.addEventListener('resize', applyMobileScale);

  function openDemo()  {
    modal?.classList.add('is-open');
    document.body.classList.add('demo-open');
    // Recalculate after panel becomes visible (clientWidth now correct)
    requestAnimationFrame(applyMobileScale);
  }
  function closeDemo() { modal?.classList.remove('is-open'); document.body.classList.remove('demo-open'); }

  openBtn?.addEventListener('click', openDemo);
  overlayBtn?.addEventListener('click', openDemo);
  overlayBtn?.addEventListener('keydown', (e: KeyboardEvent) => { if (e.key === 'Enter' || e.key === ' ') openDemo(); });
  closeBtn?.addEventListener('click', closeDemo);
  modal?.addEventListener('click', (e: MouseEvent) => { if (e.target === modal) closeDemo(); });
  document.addEventListener('keydown', (e: KeyboardEvent) => { if (e.key === 'Escape') closeDemo(); });

  // ── Nav switching ──────────────────────────────────
  document.querySelectorAll<HTMLElement>('.da-nav-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const view = btn.dataset.view;
      if (!view) return;
      document.querySelectorAll('.da-nav-btn').forEach((b) => b.classList.remove('is-active'));
      btn.classList.add('is-active');
      document.querySelectorAll('.da-view').forEach((v) => v.classList.remove('is-active'));
      document.getElementById(`da-v-${view}`)?.classList.add('is-active');
    });
  });

  // ── Dashboard "Alle anzeigen" link ────────────────
  document.querySelectorAll<HTMLElement>('.da-link-btn[data-view]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const view = btn.dataset.view;
      if (!view) return;
      const navBtn = document.querySelector<HTMLElement>(`.da-nav-btn[data-view="${view}"]`);
      navBtn?.click();
    });
  });
</script>
